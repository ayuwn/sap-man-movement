<mvc:View
   controllerName="bsim.hcmapp.man.movement.controller.StatusChange"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns="sap.m"
   xmlns:f="sap.ui.layout.form"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core"
   xmlns:semantic="sap.m.semantic"
    xmlns:upload="sap.m.upload">
<semantic:FullscreenPage navButtonPress="onNavBack" showNavButton="true" title="{i18n>employeeStatusChange}">
    <semantic:content>
        <!-- Profile -->
        <VBox class="sapUiMediumMargin" alignItems="Center" justifyContent="Center">
            <HBox backgroundDesign="Solid" width="30%" id="profileStatusChange" class="roundedProfile">
                <HBox class="sapUiSmallMarginBegin sapUiTinyMarginEndBottomTop" alignItems="Center" justifyContent="Center">
                    <Avatar displaySize="Custom"
                            initials="{path: 'employeeDetail>/EmployeeName/FormattedName', formatter: '.formatter.getEmployeeInitial'}" backgroundColor="Random" customDisplaySize="3rem"
                            tooltip="{employeeDetail>/EmployeeName/FormattedName}" class="sapMTableContentMargin sapUiSmallMarginTop"/>
                    <VBox class="sapUiSmallMarginBegin">
                        <ObjectIdentifier title="{employeeDetail>/EmployeeName/FormattedName} ({employeeDetail>/EmployeeNumber})" class="sapUiTinyMarginBottom"/>
                        <Text text="{employeeDetail>/PositionName}" />
                    </VBox>
                </HBox>
            </HBox>
        </VBox> 
        <!-- Employee Data Panel -->
        <Panel 
        expandable="true" 
        expanded="false"
        headerText="Employee Data" 
        width="auto">
            <content>
                <f:SimpleForm 
                id="employeeStatusForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                <f:content>
                    <Label text="{i18n>name}"/>
                        <HBox>
                            <Input id="NameStatusChange" value="{StatusChange>employeeDetail>/EmployeeName/FormattedName}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>group}"/>
                        <HBox>
                            <Input id="GroupStatusChange" value="{StatusChange>employeeDetail>/StatusAsal}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Text id="GroupTextStatusChange" text="{StatusChange>employeeDetail>/EmployeeGrpDesc}" class="sapUiSmallMarginBegin"/>
                        </HBox>
                    <Label text="{i18n>subgroup}"/>
                        <HBox>
                            <Input id="SubGroupStatusChange" value="{StatusChange>employeeDetail>/JbtnAsl}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Text id="SubGroupTextStatusChange" text="{StatusChange>employeeDetail>/EmployeeSubgrpDesc}" class="sapUiSmallMarginBegin"/>
                        </HBox>
                    <Label text="{i18n>divisi}"/>
                        <HBox>
                            <Input id="DivisiStatusChange" value="{StatusChange>employeeDetail>/DivisionId}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Text id="DivisiTextStatusChange" text="{StatusChange>employeeDetail>/DivisionText}" class="sapUiSmallMarginBegin"/>
                        </HBox>
                    <Label text="{i18n>ou}"/>
                        <HBox>
                            <Input id="UnitOrgStatusChange" value="{StatusChange>employeeDetail>/EmployeeOrgunitId}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Text id="UnitOrgTextStatusChange" text="{StatusChange>employeeDetail>/EmployeeOrgunitLongtext}" class="sapUiSmallMarginBegin"/>
                        </HBox>
                    <Label text="{i18n>position}"/>
                        <HBox>
                            <Input id="PositionStatusChange" value="{StatusChange>employeeDetail>/EmployeePositionId}" class="sapUiTinyMarginBeginEnd" fieldWidth="auto" editable="false"/>
                            <Text id="PositionTextStatusChange" text="{StatusChange>employeeDetail>/PositionName}" class="sapUiSmallMarginBegin" />
                        </HBox>
                    <Label text="{i18n>perarea}"/>
                        <HBox>
                            <Input id="PerareaStatusChange" value="{StatusChange>employeeDetail>/PersonnelAreaId}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Text id="PerareaTextStatusChange" text="{StatusChange>employeeDetail>/PersonnelAreaText}" class="sapUiSmallMarginBegin" />
                        </HBox>
                    <Label text="{i18n>persubarea}"/>
                        <HBox>
                            <Input id="PersubareaStatusChange" value="{StatusChange>employeeDetail>/PersonnelSubareaId}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Text id="PersubareaTextStatusChange" text="{StatusChange>employeeDetail>/PersonnelSubareaText}" class="sapUiSmallMarginBegin" />
                        </HBox>
                    <Label text="{i18n>hiringdate}"/>
                        <HBox>
                            <Input id="entryDateStatusChange" value="{path: 'employeeDetail>/HiringDate', formatter: '.formatter.formatDateDisplay'}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>ratingPA1}"/>
                        <HBox>
                            <Input id="ratingPA1StatusChange" value="{StatusChange>employeeDetail>/Rat01}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>ratingPA2}"/>
                        <HBox>
                            <Input id="ratingPA2StatusChange" value="{StatusChange>employeeDetail>/Rat02}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>ratingPA3}"/>
                        <HBox>
                            <Input id="ratingPA3StatusChange" value="{StatusChange>employeeDetail>/Rat03}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>pendterakhir}"/>
                        <HBox>
                            <Input id="PenterakhirStatusChange" value="{StatusChange>employeeDetail>/PendidikanTrkhr}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>jenispekerjaan}"/>
                        <HBox>
                            <Input id="JenispekerjaanStatusChange" value="{StatusChange>employeeDetail>/JnsPkrjaan}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>marketingAvg}"/>
                        <HBox>
                            <Input id="marketingAvgStatusChange" value="{path: 'employeeDetail>/Avg', formatter: '.formatter.removeLeadingZeros'}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                </f:content>
                </f:SimpleForm>
            </content>
        </Panel>
        <!-- Status Aktif Panel -->
        <Panel 
        expandable="true" 
        expanded="false"
        headerText="Sanksi Aktif" 
        width="auto">
            <content>
                <f:SimpleForm 
                id="sanksiStatusForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                <f:content>
                    <Label text="{i18n>sanctionType}"/>
                        <l:Grid vSpacing="0" containerQuery="true">
                        <Input id="sanctionTypeStatusChange" value="{employeeDetail>/SanksiAktif}" width="auto" editable="false" >
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <VBox>
                        <Text id="sanctionDescriptionStatusChange" visible="{FilteredAttachments>/hasRequest}" text="Surat Teguran" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                            <Button
                                icon="sap-icon://document-text" 
                                text="Show Document"
                                type="Emphasized"
                                tooltip="View Document"
                                press=".onDisplayDocumentWarning"
                                class="sapUiTinyMarginBegin"
                                visible="{FilteredAttachments>/hasRequest}"/>
                        </VBox>
                        </l:Grid>
                    <Label text="Jenis Pelanggaran" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel1StatusChange" value="{employeeDetail>/JenPel1}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel1StatusChange" text="{path: 'employeeDetail>/DescPel1', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel2StatusChange" value="{employeeDetail>/JenPel2}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel2StatusChange" text="{path: 'employeeDetail>/DescPel2', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel3StatusChange" value="{employeeDetail>/JenPel3}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel3StatusChange" text="{path: 'employeeDetail>/DescPel3', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel4StatusChange" value="{employeeDetail>/JenPel4}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel4StatusChange" text="{path: 'employeeDetail>/DescPel4', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="{i18n>actDate}" required="false"/>
                        <HBox class="sapUiTinyMarginBeginEnd">
                            <DatePicker id="actDateStartStatusChange" value="{employeeDetail>/StartDate}" width="87%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Text text="-" class="sapUiTinyMarginEnd"/>
                            <DatePicker id="actDateEndStatusChange" value="{employeeDetail>/EndDate}" width="87%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <!-- <Label text="information" visible="false"/>
                    <VBox class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop" width="57%">
                    <MessageStrip
                        text="Yang bersangkutan sedang dalam proses pengajuan [ST/TP] yang diajukan padaa tanggal dd.mm.yyyy"
                        type="Warning"
                        showIcon="true"
                        showCloseButton="false"
                        class="sapUiMediumMarginBottom">
                    </MessageStrip>
                    </VBox> -->
                </f:content>
                </f:SimpleForm>
            </content>
        </Panel>
        <Panel
        expandable="true"
        expanded="false"
        headerText="Sanksi Berjalan"
        width="auto">
        <content>
            <f:SimpleForm 
                id="sanksiBerjalanStatForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                <f:content>
                <Label text="{i18n>sanctionProgress}"/>
                            <l:Grid vSpacing="0" containerQuery="true">
                            <Input id="sanctionProgressStatusChange" value="{employeeDetail>/SanksiAktif}" width="auto" editable="false" >
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text 
                                id="sanctionProgressDescStatusChange1" 
                                text="{employeeDetail>/SanksiAktifDesc}" 
                                wrapping="true" 
                                width="100%" 
                                class="sapUiTinyMarginBegin">
                                <layoutData>
                                    <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="Jenis Pelanggaran" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPelProgress1StatusChange" value="{employeeDetail>/JenPel1}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPelProgress1StatusChange" text="{path: 'employeeDetail>/DescPel1', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPelProgress2StatusChange" value="{employeeDetail>/JenPel2}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPelProgress2StatusChange" text="{path: 'employeeDetail>/DescPel2', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPelProgress3StatusChange" value="{employeeDetail>/JenPel3}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPelProgress3StatusChange" text="{path: 'employeeDetail>/DescPel3', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPelProgress4StatusChange" value="{employeeDetail>/JenPel4}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPelProgress4StatusChange" text="{path: 'employeeDetail>/DescPel4', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>    
                </f:content>
            </f:SimpleForm>
        </content>
        </Panel>
        <!-- action request panel -->
        <Panel 
            expandable="true" 
            expanded="true"
            headerText="Action Request" 
            width="auto">
            <content>
                <f:SimpleForm 
                    id="actionStatusForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    emptySpanXL="1"
                    emptySpanL="1"
                    emptySpanM="1"
                    emptySpanS="1">
                    <f:content>
                        <Label text="{i18n>actionType}" />
                            <Input id="actionTypeStatus" value="{StatusChange>employeeDetail>/ActionType}" editable="false">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text text="{StatusChange>employeeDetail>/ActionTypeDesc}">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>reason}" required="true"/>
                            <Input 
                                id="reasonStatusChange" 
                                value="{reason>/selectedReason/Key}" 
                                fieldGroupIds="grpValidation" 
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpReason"
                                liveChange=".onReasonChange" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text id="reasonTextStatusChange" text="{reason>/selectedReason/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>effectiveDate}" required="true" />
                        <HBox>
                            <DatePicker id="effectiveDateStartStatusChange" value="" required="true" width="96%"/>
                            <Text text="-" class="sapUiTinyMarginBegin sapUiSmallMarginEnd"/>
                            <DatePicker id="effectiveDateEndStatusChange" value="" width="96%" editable="false"/>
                            
                        </HBox>
                        <Label text="{i18n>TipeKontrak}" />
                            <Input id="CurrentTipeKontrakStatusChange" value="{StatusChange>employeeDetail>/TipeKontrak}" editable="false">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text id="CurrentTipeKontrakTextStatusChange" text="{StatusChange>employeeDetail>/TipeKontrakDescAsl}">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>kontrakchange}"/>
                            <Input 
                                id="KontrakStatusChange" 
                                value="{tipekontrak>/selectedTipeKontrak/Key}" 
                                fieldGroupIds="grpValidation" 
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpTipeKontrak" >
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text id="kontrakTextStatusChange" text="{tipekontrak>/selectedTipeKontrak/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label id="validDateLabel" text="{i18n>validateDate}" />
                        <HBox>
                            <DatePicker id="validDateStartStatusChange" value="" width="96%"/>
                            <Text id="validDateDesc" text="{i18n>datedesc}" class="italicText"/>
                        </HBox>
                        <Label text="{i18n>hasilperform}"/>
                        <!-- <Input 
                            id="hasilperformStatusChange" 
                            value="{performance>/selectedPerformance/Key}" 
                            fieldGroupIds="grpValidation" 
                            editable="true"
                            showValueHelp="true" 
                            valueHelpRequest=".handleValueHelpPerformance" >
                            <layoutData>
                                <l:GridData span="L2 M2 S12" />
                            </layoutData>
                        </Input>
                        <Text id="hasilPerformTextStatusChange" text="{performance>/selectedPerformance/Value}" wrapping="true" width="100%">
                            <layoutData>
                                <l:GridData span="L2 M2 S12" />
                            </layoutData>
                        </Text> -->
                        <Select 
                            id="hasilperformStatusChange" 
                            selectedKey="{performance>/selectedPerformance/Key}" 
                            fieldGroupIds="grpValidation" 
                            editable="true" 
                            change=".handlePerformanceChange"
                            items="{ path: 'performance>/items'}">
                            <core:Item key="{performance>Key}" text="{performance>Value}" />
                            <layoutData>
                                <l:GridData span="L2 M2 S12" />
                            </layoutData>
                        </Select>
                        <Label text="{i18n>totalnilai}"/>
                        <Input id="totalNilaiStatusChange" value="">
                            <layoutData>
                                <l:GridData span="L2 M2 S12" />
                            </layoutData>
                        </Input>
                        <Label text="{i18n>kategorieval}"/>
                        <Select 
                            id="kategoriEvaluasiStatusChange" 
                            selectedKey="{evaluasi>/selectedEvaluasi/Key}" 
                            fieldGroupIds="grpValidation" 
                            editable="true" 
                            change=".handleEvaluasiChange"
                            items="{ path: 'evaluasi>/items', sorter: { path: 'Value' }}">
                            <items>
                                <core:Item key="{evaluasi>Key}" text="{evaluasi>Value}" />
                            </items>
                            <layoutData>
                                <l:GridData span="L2 M2 S12" />
                            </layoutData>
                        </Select>
                        <!-- <Input 
                            id="kategoriEvaluasiStatusChange" 
                            value="{evaluasi>/selectedEvaluasi/Key}" 
                            fieldGroupIds="grpValidation" 
                            editable="true"
                            showValueHelp="true" 
                            valueHelpRequest=".handleValueHelpEvaluasi">
                            <layoutData>
                                <l:GridData span="L2 M2 S12" />
                            </layoutData>
                        </Input>
                        <Text id="kategoriEvaluasiTextStatusChange" text="{evaluasi>/selectedEvaluasi/Value}" wrapping="true" width="100%">
                            <layoutData>
                                <l:GridData span="L2 M2 S12" />
                            </layoutData>
                        </Text> -->
                        <Label text="{i18n>salaryAdj}" />
                            <Select id="salaryAdjStatusChange" fieldGroupIds="grpValidation"
                                items="{ path: 'dropdown>/salaryAdjColl', sorter: { path: 'text' }}"
                                forceSelection="false"
                                selectedKey="{dropdown>/selectedSalaryAdj}"
                                change=".onSalaryAdjChange"
                                enabled="{dropdown>/isSalaryAdjEnabled}">
                                <items>
                                    <core:Item key="{dropdown>key}" text="{dropdown>text}" />
                                </items>
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Select>
                        <Label text="{i18n>salaryAdjValue}"/>
                            <Input 
                                id="salaryAdjValueStatusChange"
                                enabled="{dropdown>/isSalaryAdjEnabled}" 
                                value="{
                                path: 'create>/salaryAdj',
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {
                                    showMeasure: false,
                                    currencyCode: 'IDR',
                                    useSymbol: false,
                                    minFractionDigits: 0,
                                    maxFractionDigits: 0 }
                                }"
                                placeholder="0">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text text="IDR">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>                            
                        <Label text="{i18n>homebaseasal}"/>
                            <Input id="homebaseAsalStatusChange1" value="{StatusChange>employeeDetail>/HmbsAsl}" editable="false">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text id="homebaseAsalTextStatusChange" text="{homebase>/employeeDetail>/HmbsDescAsl}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label id="homebaseTujuanLabel" text="{i18n>homebasetujuan}"/>
                            <Input 
                                id="homebaseTujuanStatusChange" 
                                value="{homebase>/selectedHomebase/Key}" 
                                fieldGroupIds="grpValidation" 
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpHomebase">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text id="homebaseTujuanTextStatusChange" text="{homebase>/selectedHomebase/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>basicCon}"/>
                            <TextArea 
                                id="basicConStatusChange"
                                value="" 
                                rows="4"
                                showExceededText="true" 
                                maxLength="255" 
                                liveChange="handleLiveChange" 
                                valueLiveUpdate="true"
                                editable="true">
                                <layoutData>
                                    <l:GridData span="L6 M6 S12" />
                                </layoutData>
                            </TextArea>
                    </f:content>
                </f:SimpleForm>
            </content>
        </Panel>
        <Panel id="UploadPanel" expandable="true" expanded="false" headerText="{i18n>upDoc}" width="auto" >
                    <f:SimpleForm id="attDataStatChangeForm" editable="true" layout="ResponsiveGridLayout" labelSpanL="1" emptySpanL="-1" columnsL="1" labelSpanM="1" emptySpanM="-1" adjustLabelSpan="false" singleContainerFullSize="false">
                        <f:content>
                        <Label />
                            <upload:UploadSet
                                id="idUploadStatChange"
                                instantUpload="false"
                                terminationEnabled="false"
                                maxFileSize="10"
                                uploadUrl="/sap/opu/odata/sap/ZHR_STAT_CHANGE_MAN_SRV_01/FileAttachmentSet"
                                fileSizeExceeded=".onFileSizeExceed"
                                afterItemAdded=".onAfterItemAdded"
                                afterItemRemoved=".onAfterItemRemoved"
