                    </f:SimpleForm>
                </Panel> 
    </semantic:content>
    <semantic:mainAction>
        <semantic:MainAction id="btnSubmitStatus" text="Submit" press="onSendRequest" enabled="{= !${viewModel>/isSubmitDisabled}}"/>
