                                id="gajiMutation"
                                value="{
                                path: 'create>/salaryFinal',
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {
                                    showMeasure: false,
                                    currencyCode: 'IDR',
                                    useSymbol: false,
                                    minFractionDigits: 0,
                                    maxFractionDigits: 0
