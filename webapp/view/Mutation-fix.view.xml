                        <HBox class="sapUiTinyMarginBeginEnd">
                            <Input id="actionTypeMutation" value="{employeeDetail>/ActionType}" fieldWidth="110%" width="110%" class="sapUiTinyMarginBegin" editable="false"/>
                            <Text text="{employeeDetail>/ActionTypeDesc}" class="sapUiMediumMarginBegin"/>
                        </HBox>
                        <Label text="{i18n>reason}" required="true"/>
                        <HBox>
                            <Input 
                                id="reasonMutation" 
                                value="{reason>/selectedReason/Key}" 
                                description="{reason>/selectedReason/Value}"
                                width="auto"
                                fieldWidth="auto" 
                                fieldGroupIds="grpValidation" 
                                class="sapUiSmallMarginBegin" 
                                editable="true"
                                showValueHelp="true" 
                                liveChange=".onBlockInput"
                                valueHelpRequest=".handleValueHelpReason" 
                                required="true"/>
                        </HBox>
                        <Label text="{i18n>effectiveDate}" required="true" />
                        <HBox class="sapUiTinyMarginBeginEnd">
                            <DatePicker id="effectiveDateStartMutation" value="" width="92%" class="sapUiTinyMarginBeginEnd" required="true"/>
                            <Text text="-" class="sapUiSmallMarginBeginEnd"/>
                            <DatePicker id="effectiveDateEndMutation" value="" width="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                        <Label text="{i18n>mutation}" visible="false"/>
                        <HBox class="sapUiSmallMarginBeginEnd">
                            <Text text="Dari" class="sapUiLargeMarginEnd"/>
                            <Text id="mutationFromMutation" text="" class="sapUiLargeMarginBegin sapUiLargeMarginEnd" />
                            <Text id="mutationToMutation" text="" class="sapUiMediumMarginBegin sapUiTinyMarginEnd" />
                            <Text text="Menjadi" class="sapUiLargeMarginBegin"/>
                        </HBox>
                        <Label text="{i18n>positionId}" required="true" />
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <!-- <Table>
                            <Input id="currentPositionIdMutation" value="{employeeDetail>/EmployeePositionId}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input id="currentPositionIdMutation1" value="{employee>/EmployeePositionId}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            </Table> -->
                            <!-- <MultiInput>
                                <tokens>
                                    <Token text="{employee>/EmployeePositionId}" />
                                    <Token text="{employee>/EmployeePositionId}" />
                                </tokens>
                            </MultiInput> -->

                            <VBox class="customBox">
                                <Text text="{employeeDetail>/EmployeePositionId}" class="sapUiSmallMarginBegin" />
                                <Text text="{employeeDetail>/EmployeePositionText}" class="sapUiSmallMarginBegin" />
                            </VBox>


                            <!-- <HBox class="customBox">
                                <VBox>
                                    <Text text="{employee>/EmployeePositionId}" />
                                </VBox>
                                <VBox class="sapUiSmallMarginBegin">
                                    <Text text="{employee>/EmployeePositionText}" />
                                </VBox>
                            </HBox> -->

                            <!-- <c:Card headerText="Position" width="12em" height="4rem" class="sapUiSmallMarginBottom noRoundedCard">
                                <c:content>
                                    <VBox class="sapUiSmallMarginBegin">
                                        <ObjectAttribute
                                            text="{employee>/EmployeePositionId}" />
                                        <ObjectAttribute
                                            text="{employee>/EmployeePositionText}" />
                                    </VBox>
                                </c:content>
                            </c:Card> -->

                            <Input 
                                id="newPositionIdMutation" 
                                value="{position>/selectedPosition/Key}" 
                                width="auto"
                                fieldWidth="auto" 
                                fieldGroupIds="grpValidation" 
                                class="sapUiLargeMarginBegin" 
                                editable="true"
                                showValueHelp="true" 
                                liveChange=".onBlockInput"
                                valueHelpRequest=".handleValueHelpPosition" 
                                required="true"/>
                            <!-- <Input id="newPositionIdMutation" value="" width="91%" class="sapUiLargeMarginBegin" editable="true"/> -->
                            </HBox>
                        <Label text="{i18n>positionText}" required="true" />
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentPositionTextMutation" value="{employeeDetail>/EmployeePositionText}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input id="newPositionTextMutation" value="{position>/selectedPosition/Value}" width="91%" class="sapUiLargeMarginBegin" editable="false"/>
                            </HBox>
                        <Label text="{i18n>employeeGroupId}" required="true" />
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentEmployeeGroupIdMutation" value="{employeeDetail>/StatusAsal}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input 
                                id="newEmployeeGroupIdMutation" 
                                value="{group>/selectedGroup/Key}"
                                width="auto"
                                fieldWidth="auto"
                                fieldGroupIds="grpValidation" 
                                class="sapUiLargeMarginBegin" 
                                editable="true"
                                showValueHelp="true" 
                                liveChange=".onBlockInput"
                                valueHelpRequest=".handleValueHelpGroup" 
                                required="true"/>
                            <!-- <Input id="newEmployeeGroupIdMutation" value="" width="91%" class="sapUiLargeMarginBegin" editable="true"/> -->
                            </HBox>
                        <Label text="{i18n>employeeGroupText}" required="true" visible="false"/>
                            <l:Grid defaultSpan="XL6 L6 M6 S12" vSpacing="0" hSpacing="1" containerQuery="true">
                            <l:content>
                            <!-- <HBox class="sapUiSmallMarginBeginEnd"> -->
                                <Text id="currentEmployeeGroupTextMutation" text="{employeeDetail>/EmployeeGrpDesc}">
                                <layoutData>
                                    <l:GridData span="L6 M6 S12" />
                                </layoutData>
                                </Text>
                            <!-- <Input id="currentEmployeeGroupTextMutation" value="{employeeDetail>/EmployeeGrpDesc}" width="97%" class="sapUiMediumMarginEnd" editable="false"/> -->
                                <Text id="newEmployeeGroupTextMutation" text="{group>/selectedGroup/Value}">
                                <layoutData>
                                    <l:GridData span="L6 M6 S12"/>
                                </layoutData>
                                </Text>
                            <!-- </HBox> -->
                            </l:content>
                            </l:Grid>
                        <Label text="{i18n>employeeSubgroupId}" required="true" />
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentEmployeeSubgroupIdMutation" value="{employeeDetail>/JbtnAsl}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input 
                                id="newEmployeeSubgroupIdMutation" 
                                value="{subGroup>/selectedSubGroup/Key2}"
                                width="auto"
                                fieldWidth="auto"
                                fieldGroupIds="grpValidation" 
                                class="sapUiLargeMarginBegin" 
                                editable="true"
                                showValueHelp="true" 
                                liveChange=".onBlockInput"
                                valueHelpRequest=".handleValueHelpSubGroup" 
                                required="true"/>
                            <!-- <Input id="newEmployeeSubgroupIdMutation" value="" width="91%" class="sapUiLargeMarginBegin" editable="true"/> -->
                            </HBox>
                        <Label text="{i18n>employeeSubgroupText}" required="true" />
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentEmployeeSubgroupTextMutation" value="{employeeDetail>/EmployeeSubgrpDesc}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input id="newEmployeeSubgroupTextMutation" value="{subGroup>/selectedSubGroup/Value}" width="91%" class="sapUiLargeMarginBegin" editable="false"/>
                            </HBox>
                        <Label text="{i18n>perAreaId}" required="true"/>
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentPerAreaIdMutation" value="{employeeDetail>/PersonnelAreaId}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input 
                                id="newPerAreaIdMutation" 
                                value="{area>/selectedArea/Key}"
                                width="auto"
                                fieldWidth="auto" 
                                fieldGroupIds="grpValidation" 
                                class="sapUiLargeMarginBegin" 
                                editable="true"
                                showValueHelp="true" 
                                liveChange=".onBlockInput"
                                valueHelpRequest=".handleValueHelpArea" 
                                required="true"/>
                            <!-- <Input id="newPerAreaIdMutation" value="" width="91%" class="sapUiLargeMarginBegin" editable="true"/> -->
                            </HBox>
                        <Label text="{i18n>perAreaText}" required="true"/>
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentPerAreaTextMutation" value="{employeeDetail>/PersonnelAreaText}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input id="newPerAreaTextMutation" value="{area>/selectedArea/Value}" width="91%" class="sapUiLargeMarginBegin" editable="false"/>
                            </HBox>
                        <Label text="{i18n>perSubAreaId}" required="true"/>
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentPerSubAreaIdMutation" value="{employeeDetail>/PersonnelSubareaId}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input 
                                id="newPerSubAreaIdMutation" 
                                value="{subArea>/selectedSubArea/Key2}" 
                                width="auto"
                                fieldWidth="auto" 
                                fieldGroupIds="grpValidation" 
                                class="sapUiLargeMarginBegin" 
                                editable="true"
                                showValueHelp="true" 
                                liveChange=".onBlockInput"
                                valueHelpRequest=".handleValueHelpSubArea" 
                                required="true"/>
                            <!-- <Input id="newPerSubAreaIdMutation" value="" width="91%" class="sapUiLargeMarginBegin" editable="true"/> -->
                            </HBox>
                        <Label text="{i18n>perSubAreaText}" required="true"/>
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentPerSubAreaTextMutation" value="{employeeDetail>/PersonnelSubareaText}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input id="newPerSubAreaTextMutation" value="{subArea>/selectedSubArea/Value}" width="91%" class="sapUiLargeMarginBegin" editable="false"/>
                            </HBox>
                        <Label text="{i18n>unitOrgId}"/>
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentUnitOrgIdMutation" value="{employeeDetail>/EmployeeOrgunitId}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input id="newUnitOrgIdMutation" value="{employeeDetail>/EmployeeOrgunitId}" width="91%" class="sapUiLargeMarginBegin" editable="false"/>
                            </HBox>
                        <Label text="{i18n>unitOrgText}"/>
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentUnitOrgTextMutation" value="{employeeDetail>/EmployeeOrgunitText}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input id="newUnitOrgTextMutation" value="{employeeDetail>/EmployeeOrgunitText}" width="91%" class="sapUiLargeMarginBegin" editable="false"/>
                            </HBox>
                        <Label text="{i18n>divisionId}"/>
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentDivisionIdMutation" value="{employeeDetail>/DivisionId}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input id="newDivisionIdMutation" value="{employeeDetail>/DivisionId}" width="91%" class="sapUiLargeMarginBegin" editable="false"/>
                            </HBox>
                        <Label text="{i18n>divisionText}"/>
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentDivisionTextMutation" value="{employeeDetail>/DivisionText}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input id="newDivisionTextMutation" value="{employeeDetail>/DivisionText}" width="91%" class="sapUiLargeMarginBegin" editable="false"/>
                            </HBox>
                        <Label text="{i18n>positionMPP}"/>
                        <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentPositionMPPMutation" value="{employeeDetail>/Mpp}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input id="newPositionMPPMutation" value="{employeeDetail>/Mpp}" width="91%" class="sapUiLargeMarginBegin" editable="false"/>
                        </HBox>
                        <Label text="{i18n>grade}"/>
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="currentGradeMutation" value="{employeeDetail>/Grade}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                            <Input id="newGradeMutation" value="{employeeDetail>/Grade}" width="91%" class="sapUiLargeMarginBegin" editable="false"/>
                            </HBox>
                        <Label text="{i18n>endDateJob}"/>
                        <HBox class="sapUiSmallMarginBeginEnd">
                            <Input id="EndDateMutation" value="{path: 'employeeDetail>/ZENDDA', formatter: '.formatter.formatDateDisplay'}" width="97%" class="sapUiMediumMarginEnd" editable="false"/>
                        </HBox>
                        <Label text="{i18n>salaryAdj}" required="true"/>
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Select id="salaryAdjMutation" required="true" fieldGroupIds="grpValidation"
                                items="{ path: 'dropdown>/salaryAdjColl', sorter: { path: 'text' }}"
                                forceSelection="false"
                                selectedKey="{dropdown>/selectedSalaryAdj}"
                                width="12.5rem">
                                <items>
                                    <core:Item key="{dropdown>key}" text="{dropdown>text}" />
                                </items>
                            </Select>
                            </HBox>
                        <Label text="{i18n>salaryAdjValue}"/>
                            <HBox class="sapUiSmallMarginBeginEnd">
                            <Input 
                                id="salaryAdjValueMutation" 
                                value="{
                                path: 'create>/salaryAdj',
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {
                                    showMeasure: false,
                                    currencyCode: 'IDR',
                                    useSymbol: false,
                                    minFractionDigits: 0,
                                    maxFractionDigits: 0
                                    }
                                }"
                                width="auto" 
                                placeholder="0"
                                class="sapUiMediumMarginEnd" 
                                editable="true"
                                description="IDR"/>
                            </HBox>
                        <Label text="{i18n>as}" required="true"/>
                            <Select id="asMutation" required="true" fieldGroupIds="grpValidation"
                                items="{ path: 'dropdown>/asColl', sorter: { path: 'text' }}"
                                forceSelection="false"
                                selectedKey="{dropdown>/selectedAs}"
                                width="12.5rem"
                                class="sapUiSmallMarginBegin">
                                <items>
                                    <core:Item key="{dropdown>key}" text="{dropdown>text}" />
                                </items>
                            </Select>
                        <Label text="{i18n>employeeChange}"/>
