                    labelSpanL="4"
                    labelSpanM="4"
                    labelSpanS="12">
                    <f:content>
                        <Toolbar id="BICheckingMutation">
                            <Text text="{i18n>biChecking}" class="sapUiSmallMarginBegin"/>
                        </Toolbar>
                        <Label text="{i18n>biResult}" required="true" fieldGroupIds="grpValidation"/>
                        <HBox class="sapUiSmallMarginEnd">
                            <Text text="Collection:" class="sapUiSmallMarginEnd" />
                            <CheckBox id="hasilMutation1" text="1" selected="{path: 'hasilMutation>/hasilMutation1', formatter: '.formatter.formatCheckboxValue'}"/>
                            <CheckBox id="hasilMutation2" text="2" selected="{path: 'hasilMutation>/hasilMutation2', formatter: '.formatter.formatCheckboxValue'}"/>
                            <CheckBox id="hasilMutation3" text="3" selected="{path: 'hasilMutation>/hasilMutation3', formatter: '.formatter.formatCheckboxValue'}"/>
                            <CheckBox id="hasilMutation4" text="4" selected="{path: 'hasilMutation>/hasilMutation4', formatter: '.formatter.formatCheckboxValue'}"/>
                            <CheckBox id="hasilMutation5" text="5" selected="{path: 'hasilMutation>/hasilMutation5', formatter: '.formatter.formatCheckboxValue'}"/>
                        </HBox>
                        <Label text="{i18n>biNotes}" />
                        <TextArea 
                            id="hasilBiCheckingMutation"
                            value=""
                            width="57%"
                            rows="4"
                            showExceededText="true" 
                            maxLength="255" 
                            liveChange="handleLiveChange" 
                            valueLiveUpdate="true"
                            editable="true"/>
                        <Label text="informasi" visible="false"/>
                        <VBox class="sapUiSmallMarginTop" width="57%">
                            <MessageStrip
                                text="{i18n>warningBiChecking}"
                                type="Information"
                                showIcon="true"
                                class="sapUiTinyMarginBottom">
                            </MessageStrip>
                        </VBox>
