                <f:SimpleForm
                    editable="true"
                    id="upDocMutationForm"
                    layout="ResponsiveGridLayout" 
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="4"
                    labelSpanS="12">
                    <f:content>
                        <Toolbar id="upDocMutation">
                            <Text text="{i18n>upDoc}" class="sapUiSmallMarginBegin"/>
                        </Toolbar>
                        <VBox class="sapUiSmallMarginEnd">
                            <HBox alignItems="Center" justifyContent="End">
                                <Button
                                    icon="sap-icon://add"
                                    type="Transparent"
                                    tooltip="Add Item"
                                    press=".onOpenDialog"/>
                            </HBox>
                            <Table
                                id="table-uploadSet"
                                width="auto"
                                mode="MultiSelect"
                                fixedLayout="false"
                                inset="true"
                                autoPopinMode="true"
                                hiddenInPopin="None"
                                items="{path: 'docUploads>/uploads', templateShareable: false}"
                                selectionChange="onSelectionChange">

                                <columns>
                                    <Column id="namaDokumen" importance="High">
                                        <header>
                                            <Label text="Nama Dokumen" />
                                        </header>
                                    </Column>
                                    <Column id="jenisDokumen">
                                        <header>
                                            <Label text="Jenis Dokumen" />
                                        </header>
                                    </Column>
                                    <Column id="pic">
                                        <header>
                                            <Label text="PIC" />
                                        </header>
                                    </Column>
                                    <Column id="keterangan">
                                        <header>
                                            <Label text="Keterangan" />
                                        </header>
                                    </Column>
                                    <Column id="actionButton" importance="High" />
                                </columns>

                                <items>
                                    <ColumnListItem
                                        highlight="{= ${documents>uploadState} === 'Complete' ? 'Indication05' : null }"
                                    >

                                    <!-- Cells with cell template defining content for each column (cells and columns work with 1:1 mapping) -->
                                        <cells>
                                            <HBox>
                                                <Image
                                                    src="{documents>imageUrl}"
                                                    class="sapMUSTItemImage sapMUSTItemIcon"
                                                    visible="{= ${documents>imageUrl} !== undefined}"
                                                />
                                                <core:Icon
                                                    src="sap-icon://pdf-attachment"
                                                    color="white"
                                                    class="sapMUSTItemImage sapMUSTItemIcon"
                                                />
                                                <VBox
                                                    class="sapUiTinyMargin sapUiSmallMarginBegin">
                                                    <Link
                                                        text="{docUploads>fileName}"
                                                        wrapping="true"
                                                        press="onShowDoc"
                                                        class="sapUiTinyMarginBottom"
                                                    />
                                                    <Text text="{path: 'docUploads>fileSize', formatter: '.formatter.formatFileSize'}" />
                                                </VBox>
                                            </HBox>
                                            <Text text="{docUploads>docTypeText}" />
                                            <Text text="{docUploads>pic}" />
                                            <Text
                                                text="{docUploads>keterangan}" 
                                                wrapping="true"
                                            />

                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>                
                        </VBox> 
                    </f:content>
                </f:SimpleForm>
            </content>
        </Panel>
        <Panel id="attCTPanel" expandable="true" expanded="true" headerText="Supporting Documents" width="auto">
        <f:SimpleForm id="attDataForm" editable="true" layout="ResponsiveGridLayout" labelSpanL="1" emptySpanL="-1" columnsL="1" labelSpanM="1" emptySpanM="-1" adjustLabelSpan="false" singleContainerFullSize="false">
            <f:content>
                <Label text="Upload Supporting Documents" />
                <upload:UploadSet
                    id="idUploadSet"
                    instantUpload="false"
                    terminationEnabled="false"
                    maxFileSize="10"
                    uploadUrl="/sap/opu/odata/sap/ZHR_MOVEMENT_MAN_SRV/FileAttachmentSet"
                    fileSizeExceeded=".onFileSizeExceed"
                    afterItemAdded=".onAfterItemAdded"
                    afterItemRemoved=".onAfterItemRemoved"
                >
                    <upload:items>
                        <upload:UploadSetItem fileName="{fileAttachment>FileName}" mediaType="{fileAttachment>FileType}" url="{fileAttachment>Url}">
                            <upload:customData>
                                <core:CustomData key="RequestId" value="{fileAttachment>RequestId}" />
                                <core:CustomData key="SequenceNo" value="{fileAttachment>SequenceNo}" />
                            </upload:customData>
                        </upload:UploadSetItem>
                    </upload:items>
                </upload:UploadSet>
                <ObjectStatus id="objAttLimit" class="sapUiSmallMarginBottom" text="Maximum file size: 10 MB" icon="sap-icon://message-information" state="Information" />
            </f:content>
        </f:SimpleForm>
    </Panel>
        </semantic:content>
        <semantic:mainAction>
            <semantic:MainAction id="btnSubmitMutation" text="Submit" press="onSendRequest"/>
        </semantic:mainAction>
    </semantic:FullscreenPage>
</mvc:View>