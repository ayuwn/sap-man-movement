<mvc:View controllerName="bsim.hcmapp.man.movement.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:semantic="sap.m.semantic"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <semantic:FullscreenPage navButtonPress="onNavBack" showNavButton="true" id="overviewPage" floatingFooter="false" title="{i18n>appDescription}">
        <semantic:content>
            <Toolbar height="auto">
                <FlexBox alignItems="Center" justifyContent="Center" width="100%" class="sapUiSmallMarginTop">
                    <layout:HorizontalLayout>
                        <FlexBox direction="Column" class="sapUiSmallMarginEnd" >
                            <Label text="{i18n>year}"/>
                            <DatePicker
                                id="yearSelectOverview"
                                width="200px"
                                displayFormat="yyyy"
                                valueFormat="yyyy"
                                dateValue="{/selectedYear}"
                                change=".onYearChange"
                                class="sapUiSmallMarginBottom"/>
                        </FlexBox>
                        
                        <FlexBox direction="Column" class="sapUiSmallMarginBegin sapUiSmallMarginEnd">
                            <Label text="{i18n>searchTitle}"/>
                            <SearchField
                                id="searchFieldOverview"
                                width="300px"
                                search=".onSearch"/>
                        </FlexBox>
                        <VBox class="sapUiSmallMarginEnd">
                            <Label />
                            <HBox >
                            <Button text="{i18n>hideFilter}" 
                                press=".onToggleFilterBar"
                                class="sapUiSmallMarginBegin"/>
                            <Button text="{i18n>filter}"
                                    press=".onShowFilters"
                                    class="sapUiSmallMarginBegin"/>
                            <Button text="{i18n>go}"
                                type="Emphasized"
                                press=".onSearch"
                                class="sapUiSmallMarginBegin"/>
                            </HBox>
                        </VBox>
                    </layout:HorizontalLayout>                     
                </FlexBox>  
            </Toolbar>
            <FlexBox 
                alignItems="Center"
                justifyContent="Center"
                class="sapUiMediumMarginTop">
                <items>
                    <GenericTile header="Create Request" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" press="onActReqPressed">
                        <TileContent>
                            <NumericContent value="{path: 'appParam>/employeeCount', formatter: '.formatter.paramCountFormatter'}" icon="sap-icon://employee" withMargin="true"/>
                        </TileContent>
                    </GenericTile>
                    <GenericTile header="Approval" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" press="onAppPressed">
                        <TileContent>
                            <NumericContent value="{path: 'appParam>/requestCount', formatter: '.formatter.paramCountFormatter'}" icon="sap-icon://employee-approvals" withMargin="true"/>
                        </TileContent>
                    </GenericTile>
                    <GenericTile header="My Request" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" press="onHistoryPressed">
                        <TileContent>
                            <NumericContent value="{path: 'appParam>/requestCount', formatter: '.formatter.paramCountFormatter'}" icon="sap-icon://customer-history" withMargin="true"/>
                        </TileContent>
                    </GenericTile>
                </items>
            </FlexBox>
        </semantic:content>
    </semantic:FullscreenPage>
</mvc:View>
