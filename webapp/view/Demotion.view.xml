<mvc:View
   controllerName="bsim.hcmapp.man.movement.controller.Demotion"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns="sap.m"
   xmlns:f="sap.ui.layout.form"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core"
   xmlns:semantic="sap.m.semantic">
<semantic:FullscreenPage navButtonPress="onNavBack" showNavButton="true" title="{i18n>employeeDemotion}">
    <semantic:content>
        <!-- Profile -->
        <VBox class="sapUiMediumMargin" alignItems="Center" justifyContent="Center">
            <HBox backgroundDesign="Solid" width="30%" id="profileDemotion" class="roundedProfile">
                <HBox class="sapUiSmallMarginBegin sapUiTinyMarginEndBottomTop" alignItems="Center" justifyContent="Center">
                    <Avatar displaySize="Custom"
                            initials="{path: 'employeeDetail>/EmployeeName/FormattedName', formatter: '.formatter.getEmployeeInitial'}" backgroundColor="Random" customDisplaySize="3rem"
                            tooltip="{employeeDetail>/EmployeeName/FormattedName}" class="sapMTableContentMargin sapUiSmallMarginTop"/>
                    <VBox class="sapUiSmallMarginBegin">
                        <ObjectIdentifier title="{employeeDetail>/EmployeeName/FormattedName} ({employeeDetail>/EmployeeNumber})" class="sapUiTinyMarginBottom"/>
                        <Text text="{employeeDetail>/PositionName}" />
                    </VBox>
                </HBox>
            </HBox>
        </VBox>
        <!-- Employee Data Panel -->
        <Panel 
        expandable="true" 
        expanded="true"
        headerText="Employee Data" 
        width="auto">
            <content>
                <f:SimpleForm 
                id="employeeDemotionForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                <f:content>
                    <Label text="{i18n>entryDate}"/>
                        <HBox>
                            <Input id="entryDateDemotion" value="{path: 'employeeDetail>/HiringDate', formatter: '.formatter.formatDateDisplay'}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>ratingPA1}"/>
                        <HBox>
                            <Input id="ratingPA1Demotion" value="{Demotion>employeeDetail>/Rat01}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>ratingPA2}"/>
                        <HBox>
                            <Input id="ratingPA2Demotion" value="{Demotion>employeeDetail>/Rat02}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>ratingPA3}"/>
                        <HBox>
                            <Input id="ratingPA3Demotion" value="{Demotion>employeeDetail>/Rat03}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>marketingAvg}"/>
                        <HBox>
                            <Input id="marketingAvgDemotion" value="{path: 'employeeDetail>/Avg', formatter: '.formatter.removeLeadingZeros'}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>pendterakhir}"/>
                        <HBox>
                            <Input id="pendidikanDemotion" value="{employeeDetail>/PendidikanTrkhr}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>jenispekerjaan}"/>
                        <HBox>
                            <Input id="pekerjaanDemotion" value="{employeeDetail>/JnsPkrjaan}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                </f:content>
                </f:SimpleForm>
            </content>
        </Panel>
        <!-- Sanksi Aktif Panel -->
        <Panel 
        expandable="true" 
        expanded="true"
        headerText="Sanksi Aktif" 
        width="auto">
            <content>
                <f:SimpleForm 
                id="sanksiDemotionForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                <f:content>
                    <Label text="{i18n>sanctionType}"/>
                        <l:Grid vSpacing="0" containerQuery="true">
                        <Input id="sanctionTypeDemotion" value="{employeeDetail>/SanksiAktif}" width="auto" editable="false" >
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <VBox>
                        <Text id="sanctionDescriptionDemotion" text="Surat Teguran" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                            <Button
                                icon="sap-icon://document-text" 
                                text="Show Document"
                                type="Emphasized"
                                tooltip="View Document"
                                press="onDisplayDocumentWarning" class="sapUiTinyMarginBegin"/>
                        </VBox>
                        </l:Grid>
                    <Label text="Jenis Pelanggaran" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel1Demotion" value="{employeeDetail>/JenPel1}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel1Demotion" text="{path: 'employeeDetail>/DescPel1', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel2Demotion" value="{employeeDetail>/JenPel2}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel2Demotion" text="{path: 'employeeDetail>/DescPel2', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel3Demotion" value="{employeeDetail>/JenPel3}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel3Demotion" text="{path: 'employeeDetail>/DescPel3', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel4Demotion" value="{employeeDetail>/JenPel4}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel4Demotion" text="{path: 'employeeDetail>/DescPel4', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="{i18n>actDate}" required="false"/>
                        <HBox class="sapUiTinyMarginBeginEnd">
                            <DatePicker id="actDateStartDemotion" value="{employeeDetail>/StartDate}" width="87%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Text text="-" class="sapUiTinyMarginEnd"/>
                            <DatePicker id="actDateEndDemotion" value="{employeeDetail>/EndDate}" width="87%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <!-- <Label text="information" visible="false"/>
                    <VBox class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop" width="57%">
                    <MessageStrip
                        text="Yang bersangkutan sedang dalam proses pengajuan [ST/TP] yang diajukan padaa tanggal dd.mm.yyyy"
                        type="Warning"
                        showIcon="true"
                        showCloseButton="false"
                        class="sapUiMediumMarginBottom">
                    </MessageStrip>
                    </VBox> -->
                </f:content>
                </f:SimpleForm>
            </content>
        </Panel>
        <!-- Action Request Panel -->
        <Panel 
            expandable="true" 
            expanded="true"
            headerText="Action Request" 
            width="auto">
            <content>
                <f:SimpleForm 
                    id="actionDemotionForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    emptySpanXL="1"
                    emptySpanL="1"
                    emptySpanM="1"
                    emptySpanS="1">
                    <f:content>
                        <Label text="{i18n>actionType}" />
                            <Input id="actionTypeDemotion" value="{Demotion>employeeDetail>/ActionType}" editable="false">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text text="{Demotion>employeeDetail>/ActionTypeDesc}">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>reason}" required="true"/>
                            <Input 
                                id="reasonDemotion" 
                                value="{reason>/selectedReason/Key}" 
                                fieldGroupIds="grpValidation" 
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpReason" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text id="reasonTextDemotion" text="{reason>/selectedReason/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>effectiveDate}" required="true" />
                        <HBox class="sapUiSmallMarginBottom">
                            <DatePicker id="effectiveDateStartDemotion" value="" required="true" width="95%"/>
                            <Text text="-" class="sapUiSmallMarginBegin sapUiTinyMarginEnd"/>
                            <DatePicker id="effectiveDateEndDemotion" value="" width="95%" class="sapUiSmallMarginBegin" editable="false"/>
                        </HBox>
                            
                        <Label text="{i18n>mutation}" visible="false"/>
                            <Text text="Asal"/>
                            <Text text="Tujuan"/>
                        <Label text="{i18n>positionId}" required="true" />
                            <Input id="currentPositionIdDemotion" value="{Demotion>employeeDetail>/EmployeePositionId}" editable="false">
                            <layoutData>
                                <l:GridData span="L1 M1 S12" />
                            </layoutData>
                            </Input> 
                            <Text id="currentPositionTextDemotion" text="{Demotion>employeeDetail>/EmployeePositionLongtext}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>                       
                            <Input 
                                id="newPositionIdDemotion" 
                                value="{position>/selectedPosition/Key}" 
                                fieldGroupIds="grpValidation" 
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpPosition" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newPositionTextDemotion" text="{position>/selectedPosition/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>employeeGroupId}" required="true" />
                            <Input id="currentEmployeeGroupIdDemotion" value="{Demotion>employeeDetail>/StatusAsal}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text text="{Demotion>employeeDetail>/EmployeeGrpDesc}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newEmployeeGroupIdDemotion" 
                                value="{group>/selectedGroup/Key}"
                                fieldGroupIds="grpValidation"
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpGroup" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newEmployeeGroupTextDemotion" text="{group>/selectedGroup/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>employeeSubgroupId}" required="true" />
                            <Input id="currentEmployeeSubgroupIdDemotion" value="{Demotion>employeeDetail>/JbtnAsl}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text text="{Demotion>employeeDetail>/EmployeeSubgrpDesc}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newEmployeeSubgroupIdDemotion" 
                                value="{subGroup>/selectedSubGroup/Key2}"
                                fieldGroupIds="grpValidation" 
                                editable="true"
                                showValueHelp="true" 
                                liveChange=".onBlockInput"
                                valueHelpRequest=".handleValueHelpSubGroup" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newEmployeeSubgroupTextDemotion" text="{subGroup>/selectedSubGroup/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>perAreaId}" required="true"/>
                            <Input id="currentPerAreaIdDemotion" value="{Demotion>employeeDetail>/PersonnelAreaId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentPerAreaTextDemotion" text="{Demotion>employeeDetail>/PersonnelAreaText}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newPerAreaIdDemotion" 
                                value="{area>/selectedArea/Key}"
                                fieldGroupIds="grpValidation"  
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpArea" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newPerAreaTextDemotion" text="{area>/selectedArea/Value}" wrapping="true" width="100%"> 
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>perSubAreaId}" required="true"/>
                            <Input id="currentPerSubAreaIdDemotion" value="{Demotion>employeeDetail>/PersonnelSubareaId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentPerSubAreaTextDemotion" text="{Demotion>employeeDetail>/PersonnelSubareaText}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newPerSubAreaIdDemotion" 
                                value="{subArea>/selectedSubArea/Key2}" 
                                fieldGroupIds="grpValidation"
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpSubArea" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newPerSubAreaTextDemotion" text="{subArea>/selectedSubArea/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>unitOrgId}"/>
                            <Input id="currentUnitOrgIdDemotion" value="{Demotion>employeeDetail>/EmployeeOrgunitId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentUnitOrgTextDemotion" text="{Demotion>employeeDetail>/EmployeeOrgunitLongtext}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input id="newUnitOrgIdDemotion" value="{position>/selectedPosition/Key2}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newUnitOrgTextDemotion" text="{position>/selectedPosition/KeyDesc2}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>divisionId}"/>
                            <Input id="currentDivisionIdDemotion" value="{Demotion>employeeDetail>/DivisionId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentDivisionTextDemotion" text="{Demotion>employeeDetail>/DivisionText}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input id="newDivisionIdDemotion" value="{position>/selectedPosition/Key3}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newDivisionTextDemotion" text="{position>/selectedPosition/KeyDesc3}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <!-- <Label text="{i18n>endDateJob}"/>
                            <Input id="EndDateDemotion" value="{path: 'employeeDetail>/ZENDDA', formatter: '.formatter.formatDateDisplay'}" editable="false">
                            <layoutData>
                                <l:GridData span="L2 M2 S12" />
                            </layoutData>
                            </Input> -->
                        <Label text="{i18n>salaryAdj}" required="true"/>
                            <Select id="salaryAdjDemotion" required="true" fieldGroupIds="grpValidation"
                                items="{ path: 'dropdown>/salaryAdjColl', sorter: { path: 'text' }}"
                                forceSelection="false"
                                selectedKey="{dropdown>/selectedSalaryAdj}"
                                change=".onSalaryAdjChange">
                                <items>
                                    <core:Item key="{dropdown>key}" text="{dropdown>text}" />
                                </items>
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Select>
                        <Label text="{i18n>salaryAdjValue}"/>
                            <Input 
                                id="salaryAdjValueDemotion" 
                                enabled="{dropdown>/isSalaryAdjEnabled}"
                                value="{
                                path: 'create>/salaryAdj',
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {
                                    showMeasure: false,
                                    currencyCode: 'IDR',
                                    useSymbol: false,
                                    minFractionDigits: 0,
                                    maxFractionDigits: 0
                                    }
                                }"
                                placeholder="0">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text text="IDR">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>as}" required="true"/>
                            <Select
                                id="asDemotion"
                                items="{dropdown>/asColl}"
                                fieldGroupIds="grpValidation"
                                selectedKey="{dropdown>/selectedAs}"
                                change=".onAsFieldChange">
                                <core:Item key="{dropdown>key}" text="{dropdown>text}" />
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Select>
                            <!-- <Select id="asMutation" required="true" fieldGroupIds="grpValidation"
                                items="{ path: 'dropdown>/asColl', sorter: { path: 'text' }}"
                                forceSelection="false"
                                selectedKey="{dropdown>/selectedAs}">
                                <items>
                                    <core:Item key="{dropdown>key}" text="{dropdown>text}" />
                                </items>
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Select> -->
                        <Label text="{i18n>employeeChange}"/>
                            <Input 
                                id="employeeChangeDemotion" 
                                value="{employeechange>/selectedEmployeeChange/Key}" 
                                fieldGroupIds="grpValidation"
                                showValueHelp="true" 
                                liveChange=".onBlockInput"
                                valueHelpRequest=".handleValueHelpEmployeeChange"
                                enabled="{dropdown>/isEmployeeChangeEnabled}">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text id="employeeChangeTextDemotion" text="{employeechange>/selectedEmployeeChange/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                            
                        <Label text="{i18n>basicCon}"/>
                            <TextArea 
                                id="basicConDemotion"
                                value="" 
                                rows="4"
                                showExceededText="true" 
                                maxLength="255" 
                                liveChange="handleLiveChange" 
                                valueLiveUpdate="true"
                                editable="true">
                                <layoutData>
                                    <l:GridData span="L6 M6 S12" />
                                </layoutData>
                            </TextArea>
                    </f:content>
                </f:SimpleForm>
            </content>
        </Panel>
            </semantic:content>
            <semantic:mainAction>
                <semantic:MainAction id="btnSubmitDemotion" text="Submit" press="onSendRequest" enabled="{= !${viewModel>/isSubmitDisabled}}"/>
            </semantic:mainAction>
        </semantic:FullscreenPage>
        </mvc:View>