<mvc:View
    controllerName="bsim.hcmapp.man.movement.controller.OrgChart"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.m.semantic"
    xmlns="sap.suite.ui.commons.networkgraph"
    xmlns:layout="sap.suite.ui.commons.networkgraph.layout"
    height="100%">
    <semantic:FullscreenPage navButtonPress="onNavBack" showNavButton="true" title="{i18n>orgChart}">
        <semantic:content>
            <Graph 
                enableWheelZoom="false"
                orientation="TopBottom"
                nodes="{/nodes}"
                lines="{/lines}"
                searchSuggest="suggest"
                search="search"
                id="chart">
                <layoutAlgorithm>
                    <layout:LayeredLayout
                        mergeEdges="true"
                        nodePlacement="Simple"
                        nodeSpacing="40"/>
                </layoutAlgorithm>
                <nodes>
                    <Node
                        key="{key}"
                        title="{key}"
                        description="{title}"
                        attributes="{
                            path: 'attributes',
                            templateShareable: false
                        }"
                        showDetailButton="false"
                        descriptionLineSize="0"
                        collapsed="{collapsed}"
                        shape="Box">
                        <customData>
                            <core:CustomData key="EmployeeNumber" value="{key}"/>
                            <core:CustomData key="supervisor" value="{title}"/>
                            <core:CustomData key="picture" value="{picture}"/>
                            <core:CustomData key="team" value="{team}"/>
                            <core:CustomData key="location" value="{location}"/>
                            <core:CustomData key="position" value="{description}"/>
                            <core:CustomData key="email" value="{email}"/>
                            <core:CustomData key="phone" value="{phone}"/>
                        </customData>
                        <attributes>
                            <ElementAttribute label="{label}" value="{value}"/>
                        </attributes>
                        <image>
                            <NodeImage src="{picture}"
                                    width="80"
                                    height="100"/>
                        </image>
                    </Node>
                </nodes>
                <lines>
                    <Line from="{from}" to="{to}" arrowOrientation="None" press="linePress"/>
                </lines>
            </Graph>
        </semantic:content>
    </semantic:FullscreenPage>
</mvc:View>