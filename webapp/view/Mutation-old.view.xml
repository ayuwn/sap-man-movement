<mvc:View
   controllerName="bsim.hcmapp.man.movement.controller.Mutation"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns="sap.m"
   xmlns:f="sap.ui.layout.form"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core"
   xmlns:semantic="sap.m.semantic">
    <semantic:FullscreenPage navButtonPress="onNavBack" showNavButton="true" title="{i18n>employeeStatusChange}">
        <semantic:content>
         <VBox class="sapUiSmallMargin">
            <!-- Employee Data Panel -->
            <Panel
               expandable="true"
               expanded="false"
               headerText="Employee Data"
               width="auto"
               class="sapUiResponsiveMargin">
               <content>   
                  <!-- Employee Data Form -->
                    <f:SimpleForm
                    id="employeeFormDisplay"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="4"
                    labelSpanS="12">
                    <f:content>
                        
                        <Label text="Nama"/>
                        <HBox>
                            <Input value="" fieldWidth="7rem" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>

                        <Label text="Tanggal Masuk" />
                        <HBox>
                            <Input value="" fieldWidth="7rem" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>

                        <Label text="Rating PA 1" />
                        <HBox>
                            <Input value=""  fieldWidth="7rem" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>

                        <Label text="Rating PA 2" />
                        <HBox>
                            <Input value="" fieldWidth="7rem" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>

                        <Label text="Rating PA 3" />
                        <HBox>
                            <Input value="" fieldWidth="7rem" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>

                        <Label text="Pencapaian Marketing (Avg)" />
                        <HBox>
                            <Input value="" fieldWidth="7rem" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>

                    </f:content>
                    </f:SimpleForm>
               </content>
            </Panel>
            <!-- Sanksi Aktif -->
            <Panel
               expandable="true"
               expanded="false"
               headerText="Sanksi Aktif"
               width="auto"
               class="sapUiResponsiveMargin">
               <content>         
                  <!-- Sanksi Aktif Form -->
                <f:SimpleForm
                id="sanksiFormDisplay"
                editable="true"
                layout="ResponsiveGridLayout" 
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                <f:content>
                
                    <Label text="Jenis Sanksi" />
                    <l:HorizontalLayout>
                        <HBox alignItems="End" class="sapUiTinyMarginEnd">
                            <Input value="" width="70%" editable="false"/>
                            <Button
                                icon="sap-icon://document-text" 
                                text="Show Document"
                                type="Emphasized"
                                tooltip="Display Document"
                                press="onDisplayDocumentWarning" 
                                class="sapUiTinyMarginEnd"/>
                        </HBox>
                    </l:HorizontalLayout>

                    <Label text="Jenis Pelanggaran" />
                    <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input value="" width="20%" editable="true"/>
                        <Input value="" width="30rem" editable="false" class="sapUiTinyMarginBegin"/>
                    </l:Grid>

                    <Label text="" />
                    <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input value="" width="20%" editable="true"/>
                        <Input value="" width="30rem" editable="false" class="sapUiTinyMarginBegin"/>
                    </l:Grid>

                    <Label text="" />
                    <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input value="" width="20%" editable="true"/>
                        <Input value="" width="30rem" editable="false" class="sapUiTinyMarginBegin"/>
                    </l:Grid>

                    <Label text="" />
                    <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input value="" width="20%" editable="true"/>
                        <Input value="" width="30rem" editable="false" class="sapUiTinyMarginBegin"/>
                    </l:Grid>
                    
                     <Label text="Tanggal Berlaku" required="true" />
                        <HBox  class="sapUiTinyMarginBeginEnd">
                            <DatePicker id="tanggalBerlakutDatePickerDisplay" dateValue="{overview>/reqStartDate}" change="onReqDateChanged" width="10rem" tooltip="{i18n>showFrom}" />
                            <Text text=" - " class="sapUiTinyMarginBeginEnd"/>
                            <DatePicker id="tanggalBerakhirEndsDatePickerDisplay" dateValue="{overview>/reqStartDate}" change="onReqDateChanged" width="10rem" tooltip="{i18n>showFrom}" />
                        </HBox>

                    <Label text="" />
                    <l:Grid defaultSpan="XL12 L12 M12 S12" vSpacing="0" containerQuery="true">
                        <Label text="Yang bersangkutan sedang dalam proses pengajuan [ST/SP] yang diajukan pada tanggal dd.mm.yyyy" class="redText"/>
                    </l:Grid>

                </f:content>
                </f:SimpleForm>
               </content>
            </Panel>

            <!-- Action Request Panel -->
            <Panel
               expandable="true"
               expanded="false"
               headerText="Action Request"
               width="auto"
               class="sapUiResponsiveMargin">
               <content>         
                  <!-- Action Request Form -->
                <f:SimpleForm
                editable="true"
                id="actionRequestFormDisplay"
                layout="ResponsiveGridLayout" 
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                <f:content >
                    <Label text="Action Type" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="Reaction for Action" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Tanggal Efektif" required="true" />
                        <HBox class="sapUiTinyMarginBeginEnd"> 
                            <DatePicker id="tanggalEfektifStartDatePickerDisplay" dateValue="{overview>/reqStartDate}" change="onReqDateChanged" width="9rem" tooltip="{i18n>showFrom}" />
                            <Text text=" - " class="sapUiTinyMarginBeginEnd"/>
                            <DatePicker id="tanggalEfektifEndsDatePickerDisplay" dateValue="{overview>/reqStartDate}" change="onReqDateChanged" width="9rem" tooltip="{i18n>showFrom}" />
                        </HBox>
                    <Label text="" />
                    <HBox class="sapUiSmallMarginBeginEnd"> 
                            <Text text="Dari" />
                            <Text text="" class="sapUiLargeMarginBeginEnd" />
                            <Text text="" class="sapUiTinyMarginBeginEnd" />
                            <Text text="Menjadi" class="sapUiLargeMarginBeginEnd"/>
                        </HBox>
                    <Label text="Posisi" required="true"/>
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Kantor (Personnel Area)" required="true"/>
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Cabang (Personel Area)" required="true"/>
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Status" required="true"/>
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Contract Type" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Jabatan" required="true"/>
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Homebase" required="true"/>
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Pangkat/Level" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Unit Organisasi" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Posisi Atasan Langsung" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="MPP sesuai Posisi" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Jumlah Karyawan Existing sesuai Posisi" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Jumlah Vacant sesuai Posisi" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Karyawan Existing sesuai Posisi" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Bawahan Langsung sesuai Posisi" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Status Jawaban" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Tanggal Berakhir Status Jawaban" />
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Penyesuaian Gaji" required="true"/>
                        <HBox>
                            <Input value="" width="78%" class="sapUiTinyMarginBegin" editable="true"/>
                            <Text text="Rp"/>
                            <Input value="" width="77%" class="sapUiTinyMarginEnd" editable="true"/>
                        </HBox>
                    <Label text="Sebagai" required="true"/>
                        <HBox>
                            <Input value="" width="75%" class="sapUiTinyMarginBeginEnd" editable="true"/>
                        </HBox>
                    <Label text="Dasar Pertimbangan" />
                        <VBox class="sapUiTinyMarginBeginEnd">
                            <TextArea
                                id="tindakanInputDisplay"
                                width="50%"
                                rows="4"
                                maxLength="255"
                                value="{/kronologi}"
                                liveChange=".onKronologiChange"
                                valueLiveUpdate="true"
                                editable="true"/>
                        </VBox>
                        <Label text="" />
                        <l:Grid defaultSpan="XL12 L12 M12 S12" vSpacing="0" containerQuery="true">
                            <Label text="Harap lampirkan hasil Evaluasi di bagian Upload Dokumen" class="italicText"/> 
                            <Label text="Harap lampirkan PKWT terakhir (jika perpanjangan kontrak) di bagian Upload Dokumen" class="italicText"/>
                        </l:Grid>
                </f:content>
                </f:SimpleForm>               
               </content>               
            </Panel>

            <!-- Verification Panel -->
            <Panel
               expandable="true"
               expanded="true"
               headerText="Verification"
               width="auto"
               class="sapUiResponsiveMargin">
               <content>   
                  <!-- Verification Form -->
                <f:SimpleForm editable="true">
                <Text  text="Assesment (Diisi team Talent dan Management)" class="titleText"/>
                <Label text="Hasil Assessment" />
                <RadioButtonGroup id="rbg1" columns="2" width="100%">
                    <RadioButton id="RB1-1" text="Melebihi kualifikasi" />
                    <RadioButton id="RB1-2" text="Memenuhi kualifikasi" />
                    <RadioButton id="RB1-4" text="Hampir memenuhi kualifikasi" />
                    <RadioButton id="RB1-5" text="Belum memenuhi kualifikasi" />
                </RadioButtonGroup>
                <Label />
                <MessageStrip
                    text="Harap lampirkan hasil Assessment di bagian Upload Dokumen"
                    type="Information"
                    showIcon="true">
			    </MessageStrip>
                
                <!-- <Text text="Harap lampirkan hasil Assessment di bagian Upload Dokumen" class="italicText" />  -->
                </f:SimpleForm>
                <f:SimpleForm editable="true">             
                <Text text="BI Checking (Diisi Compensation dan Benefit)" class="titleText" />
                <Label text="Hasil BI Checking" required="true" labelFor="GroupA" />
                <HBox class="sapUiSmallMarginBeginEnd">
                    <Text text="Collection:" width="5rem"  class="titleText"/> 
                    <Input value="" width="2rem" editable="true"/>
                    <Text text="1" width="1rem" class="sapUiTinyMarginBegin"/>
                    <Input value="" width="2rem" editable="true"/>
                    <Text text="2" width="1rem" class="sapUiTinyMarginBegin"/>
                    <Input value="" width="2rem" editable="true"/>
                    <Text text="3" width="1rem" class="sapUiTinyMarginBegin"/>
                    <Input value="" width="2rem" editable="true"/>
                    <Text text="4" width="1rem" class="sapUiTinyMarginBegin"/>
                    <Input value="" width="2rem" editable="true"/>
                    <Text text="5" width="1rem" class="sapUiTinyMarginBegin"/>  
                </HBox>
                <Label text="Catatan BI Checking"/>
                        <VBox class="sapUiTinyMarginBeginEnd">
                            <TextArea
                                id="biChecking"
                                width="50%"
                                rows="4"
                                maxLength="255"
                                value="{/kronologi}"
                                liveChange=".onKronologiChange"
                                valueLiveUpdate="true"
                                editable="true"
                                class="sapUiTinyMarginBottom"/>
                        </VBox>
                <Label text="" />
                <MessageStrip
                    text="Harap lampirkan hasil BI Checking di bagian Upload Dokumen"
                    type="Information"
                    showIcon="true">
                </MessageStrip>
                </f:SimpleForm>
                <f:SimpleForm editable="true">
                <Text text="Disposisi (Diisi Data Management)"/>
                <Label text="Download file template Disposisi (excel)" />
                    <HBox class="sapUiSmallMarginBeginEnd">
                        <Input id="downloadFile"
                            type="Number"
                            value="Download"
                            width="100%"
                            maxLength="18"
                            editable="false" />
                    </HBox>
                <Label text="Hasil Disposisi" required="true" labelFor="GroupA" />
                    <HBox class="sapUiSmallMarginBeginEnd">
                        <RadioButtonGroup id="disposisi" columns="3" editable="false"
                            selectedIndex="{potensiKerugian>/selectedIndex}">
                            <buttons>
                                <RadioButton text="Disetujui" />
                                <RadioButton text="Tidak disetujui" />
                            </buttons>
                        </RadioButtonGroup>
                    </HBox>
                <Label text="Penyesuaian Gaji" />
                    <HBox class="sapUiSmallMarginBeginEnd">
                        <Label text="Rp" />
                        <Input id="penyesuaianGaji"
                            type="Number"
                            value=""
                            width="100%"
                            maxLength="18"
                            editable="true" />
                    </HBox>
                <Label text=""/>
                <MessageStrip
                    text="Harap lampirkan hasil Disposisi di bagian Upload Dokumen"
                    type="Information"
                    showIcon="true">
                </MessageStrip>
                </f:SimpleForm>
                <VBox class="sapUiSmallMarginBeginEnd sapUiMediumMarginTop">
                <HBox alignItems="Center" justifyContent="End">
                 <Button
                    width="5rem"
                    icon="sap-icon://add"
                    type="Transparent"
                    tooltip="Add Item"
                    press=".onOpenDialog"/>
                </HBox>
                <Text text="Upload Dokumen" class="sapUiSmallMarginBegin" />
                <HBox >
                <Table>
                    <columns>
                        <Column width="100px">
                            <Text text="Jenis Dokumen" />
                        </Column>
                        <Column  width="120px">
                            <Text text="PIC" />
                        </Column>
                        <Column  width="250px">
                            <Text text="Keterangan" />
                        </Column>
                        <Column width="80px">
                            <Text text="Upload" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <VBox> 
                                <Text text="Evaluasi Karyawan" />
                                </VBox>
                                <VBox>
                                <Text text="Requestor" />
                                </VBox>
                                <VBox> 
                                <Text text="" />
                                </VBox>
                                <VBox> 
                                     <Button 
                                        icon="sap-icon://document-text" 
                                        text="Show Document"
                                        type="Emphasized"
                                        tooltip="View Document"
                                        press="onDisplayDocumentWarning"/>
                                </VBox>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem>
                            <cells>
                                <VBox> 
                                <Text text="PKWT Terakhir" />
                                </VBox>
                                <VBox>
                                <Text text="Requestor" />
                                </VBox>
                                <VBox> 
                                <Text text="Khusus Contract Extend" />
                                </VBox>
                                <VBox> 
                                     <Button 
                                        icon="sap-icon://document-text" 
                                        text="Show Document"
                                        type="Emphasized"
                                        tooltip="View Document"
                                        press="onDisplayDocumentWarning"/>
                                </VBox>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem>
                            <cells>
                                <VBox> 
                                <Text text="Assessment" />
                                </VBox>
                                <VBox>
                                <Text text="Talent and Management" />
                                </VBox>
                                <VBox> 
                                <Text text="" />
                                </VBox>
                                <VBox> 
                                     <Button 
                                        icon="sap-icon://document-text" 
                                        text="Show Document"
                                        type="Emphasized"
                                        tooltip="View Document"
                                        press="onDisplayDocumentWarning"/>
                                </VBox>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem>
                            <cells>
                                <VBox> 
                                <Text text="Hasil BI Checking" />
                                </VBox>
                                <VBox>
                                <Text text="Compensation and Benefit" />
                                </VBox>
                                <VBox> 
                                <Text text="" />
                                </VBox>
                                <VBox> 
                                     <Button 
                                        icon="sap-icon://document-text" 
                                        text="Show Document"
                                        type="Emphasized"
                                        tooltip="View Document"
                                        press="onDisplayDocumentWarning"/>
                                </VBox>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem>
                            <cells>
                                <VBox> 
                                <Text text="Disposisi" />
                                </VBox>
                                <VBox>
                                <Text text="Data Management" />
                                </VBox>
                                <VBox> 
                                <Text text="" />
                                </VBox>
                                <VBox> 
                                     <Button 
                                        icon="sap-icon://document-text" 
                                        text="Show Document"
                                        type="Emphasized"
                                        tooltip="View Document"
                                        press="onDisplayDocumentWarning"/>
                                </VBox>
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem>
                            <cells>
                                <VBox> 
                                <Text text="PKWT Baru" />
                                </VBox>
                                <VBox>
                                <Text text="Requestor" />
                                </VBox>
                                <VBox> 
                                <Text text="Yang sudah ditanda-tangani pegawai" />
                                </VBox>
                                <VBox> 
                                     <Button 
                                        icon="sap-icon://document-text" 
                                        text="Show Document"
                                        type="Emphasized"
                                        tooltip="View Document"
                                        press="onDisplayDocumentWarning"/>
                                </VBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                </HBox>                  
                </VBox> 
               </content>
            </Panel>
         </VBox>
        </semantic:content>
        <semantic:mainAction>
            <semantic:MainAction id="btnSubmit" text="Submit" press="onSubmit"/>
        </semantic:mainAction>
    </semantic:FullscreenPage>
</mvc:View>