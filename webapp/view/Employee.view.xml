<mvc:View
   controllerName="bsim.hcmapp.man.movement.controller.Employee"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns="sap.m"
   xmlns:f="sap.ui.layout.form"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core"
   xmlns:semantic="sap.m.semantic">
<semantic:FullscreenPage navButtonPress="onNavBack" showNavButton="true" title="{i18n>employeeStatusChange}">
    <semantic:content>
        <VBox class="sapUiSmallMargin">
                <f:SimpleForm 
                id="employeeForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                    <f:content>
                        <Label text="NIK"/>
                            <HBox>
                                <Input value="{employee>/EmployeeNumber}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            </HBox>
                        <Label text="Nama"/>
                            <HBox>
                                <Input value="{employee>/EmployeeName/FormattedName}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd"/>
                            </HBox>
                        <Label text="Position"/>
                            <HBox>
                                <Input value="{employee>/EmployeePositionText}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd"/>
                            </HBox>
                        <Label text="Lokasi"/>
                            <HBox>
                                <Input value="{employee>/PersonnelAreaText}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd"/>
                            </HBox>
                    </f:content>
                </f:SimpleForm>
        </VBox>
</semantic:content>
</semantic:FullscreenPage>
</mvc:View>