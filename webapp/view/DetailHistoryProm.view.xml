<mvc:View
    controllerName="bsim.hcmapp.man.movement.controller.DetailHistoryProm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.m.semantic"
    xmlns:upload="sap.m.upload">
    <semantic:FullscreenPage navButtonPress="onNavBack" showNavButton="true" title="{i18n>myrequest}">
        <semantic:content>
            <VBox class="sapUiSmallMargin">
            <!-- Profile -->
            <VBox class="sapUiMediumMargin" alignItems="Center" justifyContent="Center">
                <HBox backgroundDesign="Solid" width="30%" id="profile" class="roundedProfile">
                    <HBox class="sapUiSmallMarginBegin sapUiTinyMarginEndBottomTop" alignItems="Center" justifyContent="Center">
                        <Avatar displaySize="Custom"
                                initials="{path: 'HistoryPromotion>/EmployeeName/FormattedName', formatter: '.formatter.getEmployeeInitial'}" backgroundColor="Random" customDisplaySize="3rem"
                                tooltip="{HistoryPromotion>/EmployeeName/FormattedName}" class="sapMTableContentMargin sapUiSmallMarginTop"/>
                        <VBox class="sapUiSmallMarginBegin">
                            <ObjectIdentifier title="{HistoryPromotion>/EmployeeName/FormattedName} ({HistoryPromotion>/EmployeeNumber})" class="sapUiTinyMarginBottom"/>
                            <Text text="{HistoryPromotion>/PositionName}" />
                        </VBox>
                    </HBox>
                </HBox>
            </VBox> 
                <!-- Employee Data Panel -->
                <Panel
                    expandable="true"
                    expanded="false"
                    headerText="Employee Data"
                    width="auto">
                    <content>
                        <f:SimpleForm
                            id="employeeHistoryForm"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12">
                            <f:content>
                                <Label text="{i18n>entryDate}" />
                                <HBox>
                                    <Input id="entryDateHistory" value="{path: 'HistoryPromotion>/HiringDate', formatter: '.formatter.formatDateDisplay'}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false" />
                                </HBox>
                                <Label text="{i18n>ratingPA1}" />
                                <HBox>
                                    <Input id="ratingPA1History" value="{HistoryPromotion>/Rat01}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false" />
                                </HBox>
                                <Label text="{i18n>ratingPA2}" />
                                <HBox>
                                    <Input id="ratingPA2History" value="{HistoryPromotion>/Rat02}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false" />
                                </HBox>
                                <Label text="{i18n>ratingPA3}" />
                                <HBox>
                                    <Input id="ratingPA3History" value="{HistoryPromotion>/Rat03}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false" />
                                </HBox>
                                <Label text="{i18n>marketingAvg}" />
                                <HBox>
                                    <Input id="marketingAvgHistory" value="{path: 'HistoryPromotion>/Avg', formatter: '.formatter.removeLeadingZeros'}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false" />
                                </HBox>
                                <Label text="{i18n>pendterakhir}" />
                                <HBox>
                                    <Input id="pendidikanHistory" value="{HistoryPromotion>/PendidikanTrkhr}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false" />
                                </HBox>
                                <Label text="{i18n>jenispekerjaan}" />
                                <HBox>
                                    <Input id="pekerjaanHistory" value="{HistoryPromotion>/JnsPkrjaan}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false" />
                                </HBox>
                            </f:content>
                        </f:SimpleForm>
                    </content>
                </Panel>
                <!-- Sanksi Aktif Panel -->
                <Panel
                    expandable="true"
                    expanded="false"
                    headerText="Sanksi Aktif"
                    width="auto">
                    <content>
                        <f:SimpleForm
                            id="sanksiHistoryForm"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12">
                            <f:content>
                                <Label text="{i18n>sanctionType}" />
                                <l:Grid vSpacing="0" containerQuery="true">
                                    <Input id="sanctionTypeHistory" value="{HistoryPromotion>/SanksiAktif}" width="auto" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <VBox>
                                        <Text id="sanctionDescriptionHistory" text="{HistoryPromotion>/SanksiAktifDesc}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                            <layoutData>
                                                <l:GridData span="L11 M11 S12" />
                                            </layoutData>
                                        </Text>
                                        <Button
                                            icon="sap-icon://document-text"
                                            text="Show Document"
                                            type="Emphasized"
                                            tooltip="View Document"
                                            press="onDisplayDocumentWarning"
                                            class="sapUiTinyMarginBegin" />
                                    </VBox>
                                </l:Grid>
                                <Label text="Jenis Pelanggaran" />
                                <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                                    <Input id="jenPel1History" value="{HistoryPromotion>/JenPel1}" width="auto" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text id="descPel1History" text="{path: 'HistoryPromotion>/DescPel1', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                        <layoutData>
                                            <l:GridData span="L11 M11 S12" />
                                        </layoutData>
                                    </Text>
                                </l:Grid>
                                <Label text="" />
                                <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                                    <Input id="jenPel2History" value="{HistoryPromotion>/JenPel2}" width="auto" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text id="descPel2History" text="{path: 'HistoryPromotion>/DescPel2', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                        <layoutData>
                                            <l:GridData span="L11 M11 S12" />
                                        </layoutData>
                                    </Text>
                                </l:Grid>
                                <Label text="" />
                                <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                                    <Input id="jenPel3History" value="{HistoryPromotion>/JenPel3}" width="auto" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text id="descPel3History" text="{path: 'HistoryPromotion>/DescPel3', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                        <layoutData>
                                            <l:GridData span="L11 M11 S12" />
                                        </layoutData>
                                    </Text>
                                </l:Grid>
                                <Label text="" />
                                <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                                    <Input id="jenPel4History" value="{HistoryPromotion>/JenPel4}" width="auto" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text id="descPel4History" text="{path: 'HistoryPromotion>/DescPel4', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                        <layoutData>
                                            <l:GridData span="L11 M11 S12" />
                                        </layoutData>
                                    </Text>
                                </l:Grid>
                                <Label text="{i18n>actDate}" required="false" />
                                <HBox class="sapUiTinyMarginBeginEnd">
                                    <DatePicker id="actDateStartHistory" value="{HistoryPromotion>/StartDate}" width="92%" class="sapUiTinyMarginBeginEnd" editable="false" />
                                    <Text text="-" class="sapUiTinyMarginEnd" />
                                    <DatePicker id="actDateEndHistory" value="{HistoryPromotion>/EndDate}" width="92%" class="sapUiTinyMarginBeginEnd" editable="false" />
                                </HBox>
                            </f:content>
                        </f:SimpleForm>
                    </content>
                </Panel>
                <!-- Action Request Panel -->
                <Panel 
                    expandable="true" 
                    expanded="true"
                    headerText="Action Request" 
                    width="auto">
                    <content>
                        <f:SimpleForm 
                            id="actionHistoryForm"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            emptySpanXL="1"
                            emptySpanL="1"
                            emptySpanM="1"
                            emptySpanS="1">
                            <f:content>
                                <Label text="{i18n>actionType}" />
                                    <Input id="actionTypeHistory" value="{HistoryPromotion>/ActionType}" editable="false">
                                        <layoutData>
                                            <l:GridData span="L2 M2 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/ActionTypeDesc}">
                                        <layoutData>
                                            <l:GridData span="L2 M2 S12" />
                                        </layoutData>
                                    </Text>
                                <Label text="{i18n>reason}" required="true"/>
                                    <Input 
                                        id="reasonPromHistory" 
                                        value="{HistoryPromotion>/Massg}" 
                                        editable="false" 
                                        required="true">
                                        <layoutData>
                                            <l:GridData span="L2 M2 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/MassgDesc}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L2 M2 S12" />
                                        </layoutData>
                                    </Text>
                                <Label text="{i18n>effectiveDate}" required="true" />
                                <HBox class="sapUiSmallMarginBottom">
                                    <DatePicker id="effectiveDateStartHistory" value="{path: 'HistoryPromotion>/ZbegdaEfktf', formatter: '.formatter.formatDateDisplayEfk'}" required="true" width="95%" editable="false"/>
                                    <Text text="-" class="sapUiSmallMarginBegin sapUiTinyMarginEnd"/>
                                    <DatePicker id="effectiveDateEndHistory" value="{path: 'HistoryPromotion>/ZenddaEfktf', formatter: '.formatter.formatDateDisplayEfk'}" width="95%" class="sapUiSmallMarginBegin" editable="false"/>
                                </HBox>
                                    
                                <Label text="{i18n>mutation}" visible="false"/>
                                    <Text text="Asal"/>
                                    <Text text="Tujuan"/>
                                <Label text="{i18n>positionId}" required="true" />
                                    <Input id="currentPositionIdHistory" value="{HistoryPromotion>/PlansAsl}" editable="false">
                                    <layoutData>
                                        <l:GridData span="L1 M1 S12" />
                                    </layoutData>
                                    </Input> 
                                    <Text text="{HistoryPromotion>/PositionName}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>                       
                                    <Input 
                                        id="newPositionIdHistory" 
                                        value="{HistoryPromotion>/PlansDest}" 
                                        editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/PlansDesc_Dest}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                <Label text="{i18n>employeeGroupId}" required="true" />
                                    <Input id="currentEmployeeGroupIdHistory" value="{HistoryPromotion>/StatusAsal}" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/EmployeeGrpDesc}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                    <Input 
                                        id="newEmployeeGroupIdHistory" 
                                        value="{HistoryPromotion>/PersgDest}"
                                        editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/PersgDestDesc}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                <Label text="{i18n>employeeSubgroupId}" required="true" />
                                    <Input id="currentEmployeeSubgroupIdMutation" value="{HistoryPromotion>/JbtnAsl}" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/EmployeeSubgrpDesc}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                    <Input 
                                        id="newEmployeeSubgroupIdHistory" 
                                        value="{HistoryPromotion>/PerskDest}"
                                        editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/PerskDestDesc}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                <Label text="{i18n>perAreaId}" required="true"/>
                                    <Input id="currentPerAreaIdMutation" value="{HistoryPromotion>/PersonnelAreaId}" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/PersonnelAreaText}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                    <Input 
                                        id="newPerAreaIdHistory" 
                                        value="{HistoryPromotion>/WerksDest}"
                                        editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/WerksDestDesc}" wrapping="true" width="100%"> 
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                <Label text="{i18n>perSubAreaId}" required="true"/>
                                    <Input id="currentPerSubAreaIdHistory" value="{HistoryPromotion>/PersonnelSubareaId}" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/PersonnelSubareaText}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                    <Input 
                                        id="newPerSubAreaIdHistory" 
                                        value="{HistoryPromotion>/BtrtlDest}" 
                                        editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/BtrtlDestDesc}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                <Label text="{i18n>unitOrgId}"/>
                                    <Input id="currentUnitOrgIdHistory" value="{HistoryPromotion>/OuAsl}" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/OuDecAsl}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                    <Input id="newUnitOrgIdHistory" value="{HistoryPromotion>/OuDest}" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/OuDescDest}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                <Label text="{i18n>divisionId}"/>
                                    <Input id="currentDivisionIdHistory" value="{HistoryPromotion>/DivisiAsl}" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/DivisiDescAsl}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                    <Input id="newDivisionIdHistory" value="{HistoryPromotion>/DivisiDest}" editable="false">
                                        <layoutData>
                                            <l:GridData span="L1 M1 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/DivisiDescDest}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L3 M3 S12" />
                                        </layoutData>
                                    </Text>
                                <Label text="{i18n>salaryAdj}" required="true"/>
                                    <Input id="salaryAdjHistory"
                                    value="{parts: [
                                                { path: 'HistoryPromotion>/Adjstmn' }, 
                                                { path: 'dropdown>/salaryAdjColl' }
                                            ], 
                                            formatter: '.formatter.asTextFormatter'}"  
                                            editable="false">
                                        <layoutData>
                                            <l:GridData span="L2 M2 S12" />
                                        </layoutData>
                                    </Input>
                                <Label text="{i18n>salaryAdjValue}"/>
                                    <Input 
                                        id="salaryAdjValueHistory" 
                                        value="{path: 'HistoryPromotion>/Zsalary', formatter: '.formatter.formatSalary'}"
                                        editable="false">
                                        <layoutData>
                                            <l:GridData span="L2 M2 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="IDR">
                                        <layoutData>
                                            <l:GridData span="L2 M2 S12" />
                                        </layoutData>
                                    </Text>
                                <Label text="{i18n>as}" required="true"/>
                                    <Input id="asHistory" 
                                    value="{parts: [
                                                { path: 'HistoryPromotion>/Zdasar1' }, 
                                                { path: 'dropdown>/asColl' }
                                            ], 
                                            formatter: '.formatter.asTextFormatter'}" 
                                            editable="false">
                                        <layoutData>
                                            <l:GridData span="L2 M2 S12" />
                                        </layoutData>
                                    </Input>
                                <Label text="{i18n>employeeChange}"/>
                                    <Input 
                                        id="employeeChangeHistory" 
                                        value="{path: 'HistoryPromotion>/Zexholder', formatter: '.formatter.formatEmployeeChange'}" 
                                        editable="false">
                                        <layoutData>
                                            <l:GridData span="L2 M2 S12" />
                                        </layoutData>
                                    </Input>
                                    <Text text="{HistoryPromotion>/ZexholderDesc}" wrapping="true" width="100%">
                                        <layoutData>
                                            <l:GridData span="L2 M2 S12" />
                                        </layoutData>
                                    </Text>
                                    
                                <Label text="{i18n>basicCon}"/>
                                    <TextArea 
                                        id="basicConHistory"
                                        value="{HistoryPromotion>/Zdasar2}" 
                                        rows="4"
                                        editable="false">
                                        <layoutData>
                                            <l:GridData span="L6 M6 S12" />
                                        </layoutData>
                                    </TextArea>
                            </f:content>
                        </f:SimpleForm>
                    </content>
                </Panel>
                <!-- Verification Panel -->
                <Panel 
                    expandable="true" 
                    expanded="true"
                    headerText="Verification" 
                    width="auto">
                    <content>
                    <f:SimpleForm 
                        editable="true"
                        id="assessmentHistoryForm"
                        layout="ResponsiveGridLayout" 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12">
                        <f:content>
                            <Toolbar id="AssessmentHistory">
                                <Text text="{i18n>assessment}" class="sapUiSmallMarginBegin"/>
                            </Toolbar>
                            <Label text="{i18n>assessmentResult}" fieldGroupIds="grpValidation"/>
                                <HBox>
                                <Input id="assessmentResultHistory" value="{HistoryPromotion>/HasilAssesment2}" width="22rem" class="sapUiMediumMarginEnd" editable="false"/>
                                <CheckBox id="verifyResultHistory" text="Verify" selected="{path: 'HistoryPromotion>/Zverify', formatter: '.formatter.formatCheckboxValue'}" editable="false"/>
                                </HBox>
                            <Label text="Tanggal Assessment" fieldGroupIds="grpValidation"/>
                                <HBox>
                                    <Input id="dateAssessResultMov" value="{path: 'HistoryPromotion>/HasilAssesment', formatter: '.formatter.formatDateDisplay'}" width="22rem" class="sapUiMediumMarginEnd" editable="false"/>
                                </HBox>
                            </f:content>
                    </f:SimpleForm>
                    <f:SimpleForm
                        editable="true"
                        id="biCheckingHistoryForm"
                        layout="ResponsiveGridLayout" 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12">
                        <f:content>
                            <Toolbar id="BICheckingHistory">
                                <Text text="{i18n>biChecking}" class="sapUiSmallMarginBegin"/>
                            </Toolbar>
                            <Label text="{i18n>biResult}" required="true" fieldGroupIds="grpValidation"/>
                            <HBox class="sapUiSmallMarginEnd">
                                <Text text="Collection:" class="sapUiSmallMarginEnd" />
                                <RadioButtonGroup
                                    id="hasilHistoryRadioGroup"
                                    columns="5"
                                    selectedIndex="{= ${HistoryPromotion>/Zbichecking} - 1 }"
                                    enabled="false">
                                    <buttons>
                                        <RadioButton text="1" />
                                        <RadioButton text="2" />
                                        <RadioButton text="3" />
                                        <RadioButton text="4" />
                                        <RadioButton text="5" />
                                    </buttons>
                                </RadioButtonGroup>
                            </HBox>
                            <Label text="{i18n>biNotes}" />
                                <TextArea 
                                id="hasilBiCheckingHistory"
                                value="{HistoryPromotion>/Znotebicheck}"
                                width="57%"
                                rows="4"
                                editable="false"/>
                        </f:content>
                    </f:SimpleForm>
                    <f:SimpleForm
                    editable="true"
                    id="dispoHistoryForm"
                    layout="ResponsiveGridLayout" 
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="4"
                    labelSpanS="12">
                    <f:content>
                        <Toolbar id="disposisiToolbarHistory">
                            <Text text="{i18n>disposisi}" class="sapUiSmallMarginBegin"/>
                        </Toolbar>
                        <Label text="{i18n>rekomendasiHCM}" required="true"/>
                        <TextArea 
                            id="rekomendasiHCMHistory"
                            value="{HistoryPromotion>/ZrekomHcm}"
                            width="57%"
                            rows="4"
                            class="sapUiSmallMarginBottom"
                            editable="false"/>
                        <Label text="{i18n>downloadDis}" />
                        <HBox class="sapUiSmallMarginEnd">
                            <Button
                                icon="sap-icon://download"
                                text="Download"
                                type="Emphasized"
                                press="onDownloadDisposisi"
                                class="sapUiTinyMarginEnd"/>
                        </HBox>
                        <Label text="{i18n>disResult}" required="true" fieldGroupIds="grpValidation" />
                        <RadioButtonGroup id="disposisiHistory" enabled="false" columns="2" width="100%" selectedIndex="{path: 'HistoryPromotion>/Zdisposisi', formatter: '.formatter.formatDisposisi'}">
                            <RadioButton text="Rekomendasi" class="sapUiSmallMarginEnd"/>
                            <RadioButton text="Tidak Direkomendasikan" />
                        </RadioButtonGroup>
                        <Label text="{i18n>dispoNote}" />
                        <TextArea 
                            id="dispoNoteHistory"
                            value="{HistoryPromotion>/Znotedisp}"
                            width="57%"
                            rows="4"
                            maxLength="255" 
                            editable="false"/>
                        <Label text="{i18n>reason}" />
                        <HBox>
                            <Input 
                                id="reasonHistory"
                                type="Text"
                                value="{HistoryPromotion>/}"
                                width="auto"
                                editable="false"/>
                        </HBox>   
                        <Label text="{i18n>payType}" />
                        <HBox>
                            <Input 
                                id="payTypeHistory"
                                type="Text"
                                value="{HistoryPromotion>/}"
                                width="auto"
                                editable="false"/>
                        </HBox> 
                        <Label text="{i18n>payArea}" />
                        <HBox>
                            <Input 
                                id="payAreaHistory"
                                type="Text"
                                value="{HistoryPromotion>/}"
                                width="auto"
                                editable="false"/>
                        </HBox>  
                        <Label text="{i18n>payGroup}" required="true"/>
                        <HBox>
                            <Input 
                                id="payGroupHistory"
                                type="Text"
                                value="{HistoryPromotion>/}"
                                width="auto"
                                editable="false"/>
