<mvc:View
   controllerName="bsim.hcmapp.man.movement.controller.Mutation"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns="sap.m"
   xmlns:f="sap.ui.layout.form"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core"
   xmlns:semantic="sap.m.semantic"
   xmlns:vm="sap.ui.fl.variants"
   xmlns:mdc="sap.ui.mdc"
   xmlns:mdct="sap.ui.mdc.table"
   xmlns:upload="sap.m.upload" 
   xmlns:u="sap.ui.unified"
   xmlns:c="sap.f">
<semantic:FullscreenPage id="Movement" navButtonPress="onNavBack" showNavButton="true" title="{i18n>appMovement}">
    <semantic:content>

        <!-- Profile -->
        <VBox class="sapUiMediumMargin" alignItems="Center" justifyContent="Center">
            <HBox backgroundDesign="Solid" width="30%" id="profile" class="roundedProfile">
                <HBox class="sapUiSmallMarginBegin sapUiTinyMarginEndBottomTop" alignItems="Center" justifyContent="Center">
                    <Avatar displaySize="Custom"
                            initials="{path: 'employeeDetail>/EmployeeName/FormattedName', formatter: '.formatter.getEmployeeInitial'}" backgroundColor="Random" customDisplaySize="3rem"
                            tooltip="{employeeDetail>/EmployeeName/FormattedName}" class="sapMTableContentMargin sapUiSmallMarginTop"/>
                    <VBox class="sapUiSmallMarginBegin">
                        <ObjectIdentifier title="{employeeDetail>/EmployeeName/FormattedName} ({employee>/EmployeeNumber})" class="sapUiTinyMarginBottom"/>
                        <Text text="{employeeDetail>/PositionName}" />
                    </VBox>
                </HBox>
            </HBox>
        </VBox>       

        <!-- Employee Data Panel -->
        <Panel 
        expandable="true" 
        expanded="false"
        headerText="Employee Data" 
        width="auto">
            <content>
                <f:SimpleForm 
                id="employeeMutationForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                    <f:content>
                        <Label text="{i18n>entryDate}"/>
                            <HBox>
                                <Input id="entryDateMutation" value="{path: 'employeeDetail>/HiringDate', formatter: '.formatter.formatDateDisplay'}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            </HBox>
                        <Label text="{i18n>ratingPA1}"/>
                            <HBox>
                                <Input id="ratingPA1Mutation" value="{employeeDetail>/Rat01}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            </HBox>
                        <Label text="{i18n>ratingPA2}"/>
                            <HBox>
                                <Input id="ratingPA2Mutation" value="{employeeDetail>/Rat02}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            </HBox>
                        <Label text="{i18n>ratingPA3}"/>
                            <HBox>
                                <Input id="ratingPA3Mutation" value="{employeeDetail>/Rat03}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            </HBox>
                        <Label text="{i18n>marketingAvg}"/>
                            <HBox>
                                <Input id="marketingAvgMutation" value="{path: 'employeeDetail>/Avg', formatter: '.formatter.removeLeadingZeros'}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            </HBox>
                        <Label text="{i18n>pendterakhir}"/>
                            <HBox>
                                <Input id="pendidikanMutation" value="{employeeDetail>/PendidikanTrkhr}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            </HBox>
                        <Label text="{i18n>jenispekerjaan}"/>
                            <HBox>
                                <Input id="pekerjaanMutation" value="{employeeDetail>/JnsPkrjaan}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            </HBox>
                    </f:content>
                </f:SimpleForm>
            </content>
        </Panel>
        <!-- Sanksi Aktif Panel -->
        <Panel 
        expandable="true" 
        expanded="false"
        headerText="Sanksi Aktif" 
        width="auto">
            <content>
                <f:SimpleForm 
                id="sanksiMutationForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                    <f:content>
                        <Label text="{i18n>sanctionType}"/>
                            <l:Grid vSpacing="0" containerQuery="true">
                            <Input id="sanctionTypeMutation" value="{employeeDetail>/SanksiAktif}" width="auto" editable="false" >
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <VBox>
                            <Text 
                                id="sanctionDescriptionMutation1" 
                                text="{employeeDetail>/SanksiAktifDesc}" 
                                wrapping="true" 
                                width="100%" 
                                class="sapUiTinyMarginBegin">
                                <layoutData>
                                    <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            <Button
                            icon="sap-icon://document-text" 
                            id="DocumentMutation"
                            text="Show Document"
                            type="Emphasized"
                            tooltip="View Document"
                            press=".onDisplayDocumentWarning"
                            class="sapUiTinyMarginBegin"
                            visible="{FilteredAttachments>/hasRequest}" />
                                <!-- <Button
                                    icon="sap-icon://document-text" 
                                    id="DocumentMutation"
                                    text="Show Document"
                                    type="Emphasized"
                                    tooltip="View Document"
                                    press=".onDisplayDocumentWarning" class="sapUiTinyMarginBegin"/> -->
                            </VBox>
                            </l:Grid>
                        <Label text="Jenis Pelanggaran" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPel1Mutation" value="{employeeDetail>/JenPel1}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPel1Mutation" text="{path: 'employeeDetail>/DescPel1', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPel2Mutation" value="{employeeDetail>/JenPel2}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPel2Mutation" text="{path: 'employeeDetail>/DescPel2', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPel3Mutation" value="{employeeDetail>/JenPel3}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPel3Mutation" text="{path: 'employeeDetail>/DescPel3', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPel4Mutation" value="{employeeDetail>/JenPel4}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPel4Mutation" text="{path: 'employeeDetail>/DescPel4', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="{i18n>actDate}" required="false"/>
                            <HBox class="sapUiTinyMarginBeginEnd">
                                <DatePicker id="actDateStartMutation" value="{employeeDetail>/StartDate}" width="87%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                                <Text text="-" class="sapUiTinyMarginEnd"/>
                                <DatePicker id="actDateEndMutation" value="{employeeDetail>/EndDate}" width="87%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            </HBox>
                        <Label text="information" visible="false"/>
                        <VBox class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop" width="57%">
                        <!-- <MessageStrip
                            text="Yang bersangkutan sedang dalam proses pengajuan [ST/TP] yang diajukan padaa tanggal dd.mm.yyyy"
                            type="Warning"
                            showIcon="true"
                            showCloseButton="false"
                            class="sapUiMediumMarginBottom">
                        </MessageStrip> -->
                        </VBox>
                    </f:content>
                </f:SimpleForm>
            </content>
        </Panel> 
        <!-- sanksi berjalan panel -->
        <Panel
        expandable="true"
        expanded="false"
        headerText="Sanksi Berjalan"
        width="auto">
        <content>
            <f:SimpleForm 
                id="sanksiBerjalanMutationForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                <f:content>
                <Label text="{i18n>sanctionProgress}"/>
                            <l:Grid vSpacing="0" containerQuery="true">
                            <Input id="sanctionProgressMutation" value="{employeeDetail>/SanksiAktif}" width="auto" editable="false" >
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text 
                                id="sanctionProgressDescMutation1" 
                                text="{employeeDetail>/SanksiAktifDesc}" 
                                wrapping="true" 
                                width="100%" 
                                class="sapUiTinyMarginBegin">
                                <layoutData>
                                    <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="Jenis Pelanggaran" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPelProgress1Mutation" value="{employeeDetail>/JenPel1}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPelProgress1Mutation" text="{path: 'employeeDetail>/DescPel1', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPelProgress2Mutation" value="{employeeDetail>/JenPel2}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPelProgress2Mutation" text="{path: 'employeeDetail>/DescPel2', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPelProgress3Mutation" value="{employeeDetail>/JenPel3}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPelProgress3Mutation" text="{path: 'employeeDetail>/DescPel3', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>
                        <Label text="" />
                            <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                            <Input id="jenPelProgress4Mutation" value="{employeeDetail>/JenPel4}" width="auto" editable="false">
                                <layoutData>
                                <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="descPelProgress4Mutation" text="{path: 'employeeDetail>/DescPel4', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                                <layoutData>
                                <l:GridData span="L11 M11 S12" />
                                </layoutData>
                            </Text>
                            </l:Grid>    
                </f:content>
            </f:SimpleForm>
        </content>
        </Panel>
        <!-- Action Request Panel -->
        <Panel 
            expandable="true" 
            expanded="true"
            headerText="Action Request" 
            width="auto">
            <content>
                <f:SimpleForm 
                    id="actionMutationForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    emptySpanXL="1"
                    emptySpanL="1"
                    emptySpanM="1"
                    emptySpanS="1">
                    <f:content>
                        <Label text="{i18n>actionType}" />
                            <Input id="actionTypeMutation" value="{employeeDetail>/ActionType}" editable="false">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text text="{employeeDetail>/ActionTypeDesc}">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>reason}" required="true"/>
                            <Input 
                                id="reasonMutation" 
                                value="{reason>/selectedReason/Key}" 
                                fieldGroupIds="grpValidation" 
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpReason" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text id="reasonTextMutation" text="{reason>/selectedReason/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>effectiveDate}" required="true" />
                        <HBox class="sapUiSmallMarginBottom">
                            <DatePicker id="effectiveDateStartMutation" value="" required="true" width="95%" change=".onEffectiveDateStartChange"/>
                            <Text text="-" class="sapUiSmallMarginBegin sapUiTinyMarginEnd"/>
                            <DatePicker id="effectiveDateEndMutation" value="" width="95%" class="sapUiSmallMarginBegin" editable="false"/>
                        </HBox>
                            
                        <Label text="{i18n>mutation}" visible="false"/>
                            <Text text="Asal"/>
                            <Text text="Tujuan"/>
                        <Label text="{i18n>positionId}" required="true" />
                            <Input id="currentPositionIdMutation" value="{employeeDetail>/EmployeePositionId}" editable="false">
                            <layoutData>
                                <l:GridData span="L1 M1 S12" />
                            </layoutData>
                            </Input> 
                            <Text id="currentPositionTextMutation" text="{employeeDetail>/PositionName}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>                       
                            <Input 
                                id="newPositionIdMutation" 
                                value="{position>/selectedPosition/Key}" 
                                fieldGroupIds="grpValidation" 
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpPosition" 
                                liveChange=".onPositionChange"
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newPositionTextMutation" text="{position>/selectedPosition/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>employeeGroupId}" required="true" />
                            <Input id="currentEmployeeGroupIdMutation" value="{employeeDetail>/StatusAsal}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text text="{employeeDetail>/EmployeeGrpDesc}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newEmployeeGroupIdMutation" 
                                value="{
                                    parts: [
                                        {path: 'group>/selectedGroup/Key'},
                                        {path: 'position>/selectedPosition/Key6'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                fieldGroupIds="grpValidation"
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpGroup" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text 
                                id="newEmployeeGroupTextMutation" 
                                text="{
                                    parts: [
                                        {path: 'group>/selectedGroup/Value'},
                                        {path: 'position>/selectedPosition/KeyDesc6'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>employeeSubgroupId}" required="true" />
                            <Input id="currentEmployeeSubgroupIdMutation" value="{employeeDetail>/JbtnAsl}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text text="{employeeDetail>/EmployeeSubgrpDesc}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newEmployeeSubgroupIdMutation" 
                                value="{
                                    parts: [
                                        {path: 'subGroup>/selectedSubGroup/Key2'},
                                        {path: 'position>/selectedPosition/Key7'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                fieldGroupIds="grpValidation" 
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpSubGroup" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text 
                                id="newEmployeeSubgroupTextMutation" 
                                text="{
                                    parts: [
                                        {path: 'subGroup>/selectedSubGroup/Value'},
                                        {path: 'position>/selectedPosition/KeyDesc7'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>perAreaId}" required="true"/>
                            <Input id="currentPerAreaIdMutation" value="{employeeDetail>/PersonnelAreaId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentPerAreaTextMutation" text="{employeeDetail>/PersonnelAreaText}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newPerAreaIdMutation" 
                                value="{
                                    parts: [
                                        {path: 'area>/selectedArea/Key'},
                                        {path: 'position>/selectedPosition/Key4'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                fieldGroupIds="grpValidation"  
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpArea" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text 
                                id="newPerAreaTextMutation" 
                                text="{
                                    parts: [
                                        {path: 'area>/selectedArea/Value'},
                                        {path: 'position>/selectedPosition/KeyDesc4'}
                                        
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                wrapping="true" width="100%"> 
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>perSubAreaId}" required="true"/>
                            <Input id="currentPerSubAreaIdMutation" value="{employeeDetail>/PersonnelSubareaId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentPerSubAreaTextMutation" text="{employeeDetail>/PersonnelSubareaText}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newPerSubAreaIdMutation" 
                                value="{
                                    parts: [
                                        {path: 'subArea>/selectedSubArea/Key2'},
                                        {path: 'position>/selectedPosition/Key5'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                fieldGroupIds="grpValidation"
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpSubArea" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text 
                                id="newPerSubAreaTextMutation" 
                                text="{
                                    parts: [
                                        {path: 'subArea>/selectedSubArea/Value'},
                                        {path: 'position>/selectedPosition/KeyDesc5'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>unitOrgId}"/>
                            <Input id="currentUnitOrgIdMutation" value="{employeeDetail>/EmployeeOrgunitId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentUnitOrgTextMutation" text="{employeeDetail>/EmployeeOrgunitLongtext}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input id="newUnitOrgIdMutation" value="{position>/selectedPosition/Key2}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newUnitOrgTextMutation" text="{position>/selectedPosition/KeyDesc2}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>divisionId}"/>
                            <Input id="currentDivisionIdMutation" value="{employeeDetail>/DivisionId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentDivisionTextMutation" text="{employeeDetail>/DivisionText}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input id="newDivisionIdMutation" value="{position>/selectedPosition/Key3}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newDivisionTextMutation" text="{position>/selectedPosition/KeyDesc3}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <!-- <Label text="{i18n>mutasiberkala}" required="true" fieldGroupIds="grpValidation"/>
                            <HBox>
                                <CheckBox id="verifyMutation" text="Ya" select=".isVerifyMutation" selected="{viewModel>/isVerifyMutation}"/>
