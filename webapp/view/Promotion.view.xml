<mvc:View
   controllerName="bsim.hcmapp.man.movement.controller.Promotion"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns="sap.m"
   xmlns:f="sap.ui.layout.form"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core"
   xmlns:semantic="sap.m.semantic">
<semantic:FullscreenPage id="Promotion" navButtonPress="onNavBack" showNavButton="true" title="{i18n>employeePromotion}">
    <semantic:content>
        <!-- Profile -->
        <VBox class="sapUiMediumMargin" alignItems="Center" justifyContent="Center">
            <HBox backgroundDesign="Solid" width="30%" id="profilePromotion" class="roundedProfile">
                <HBox class="sapUiSmallMarginBegin sapUiTinyMarginEndBottomTop" alignItems="Center" justifyContent="Center">
                    <Avatar displaySize="Custom"
                            initials="{path: 'employeeDetail>/EmployeeName/FormattedName', formatter: '.formatter.getEmployeeInitial'}" backgroundColor="Random" customDisplaySize="3rem"
                            tooltip="{employeeDetail>/EmployeeName/FormattedName}" class="sapMTableContentMargin sapUiSmallMarginTop"/>
                    <VBox class="sapUiSmallMarginBegin">
                        <ObjectIdentifier title="{employeeDetail>/EmployeeName/FormattedName} ({employeeDetail>/EmployeeNumber})" class="sapUiTinyMarginBottom"/>
                        <Text text="{employeeDetail>/PositionName}" />
                    </VBox>
                </HBox>
            </HBox>
        </VBox> 
        <!-- Employee Data Panel -->
        <Panel 
        expandable="true" 
        expanded="true"
        headerText="Employee Data" 
        width="auto">
            <content>
                <f:SimpleForm 
                id="employeePromotionForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                <f:content>
                    <Label text="{i18n>entryDate}"/>
                        <HBox>
                            <Input id="entryDatePromotion" value="{path: 'employeeDetail>/HiringDate', formatter: '.formatter.formatDateDisplay'}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>ratingPA1}"/>
                        <HBox>
                            <Input id="ratingPA1Promotion" value="{Promotion>employeeDetail>/Rat01}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>ratingPA2}"/>
                        <HBox>
                            <Input id="ratingPA2Promotion" value="{Promotion>employeeDetail>/Rat02}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>ratingPA3}"/>
                        <HBox>
                            <Input id="ratingPA3Promotion" value="{Promotion>employeeDetail>/Rat03}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>marketingAvg}"/>
                        <HBox>
                            <Input id="marketingAvgPromotion" value="{path: 'employeeDetail>/Avg', formatter: '.formatter.removeLeadingZeros'}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>pendterakhir}"/>
                        <HBox>
                            <Input id="pendidikanPromotion" value="{Promotion>employeeDetail>/PendidikanTrkhr}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <Label text="{i18n>jenispekerjaan}"/>
                            <HBox>
                                <Input id="pekerjaanPromotion" value="{Promotion>employeeDetail>/JnsPkrjaan}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            </HBox>
                </f:content>
                </f:SimpleForm>
            </content>
        </Panel>
        <!-- Sanksi Aktif Panel -->
        <Panel 
        expandable="true" 
        expanded="true"
        headerText="Sanksi Aktif" 
        width="auto">
            <content>
                <f:SimpleForm 
                id="sanksiPromotionForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                <f:content>
                    <Label text="{i18n>sanctionType}"/>
                        <l:Grid vSpacing="0" containerQuery="true">
                        <Input id="sanctionTypePromotion" value="{employeeDetail>/SanksiAktif}" width="auto" editable="false" >
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <VBox>
                        <Text id="sanctionDescriptionPromotion" text="Surat Teguran" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                            <Button
                                icon="sap-icon://document-text" 
                                text="Show Document"
                                type="Emphasized"
                                tooltip="View Document"
                                press="onDisplayDocumentWarning" class="sapUiTinyMarginBegin"/>
                        </VBox>
                        </l:Grid>
                    <Label text="Jenis Pelanggaran" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel1Promotion" value="{employeeDetail>/JenPel1}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel1Promotion" text="{path: 'employeeDetail>/DescPel1', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel2Promotion" value="{employeeDetail>/JenPel2}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel2Promotion" text="{path: 'employeeDetail>/DescPel2', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel3Promotion" value="{employeeDetail>/JenPel3}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel3Promotion" text="{path: 'employeeDetail>/DescPel3', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="" />
                        <l:Grid defaultSpan="XL1 L1 M1 S12" vSpacing="0" containerQuery="true">
                        <Input id="jenPel4Promotion" value="{employeeDetail>/JenPel4}" width="auto" editable="false">
                            <layoutData>
                            <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="descPel4Promotion" text="{path: 'employeeDetail>/DescPel4', formatter: '.formatter.formatDescPel'}" wrapping="true" width="100%" class="sapUiTinyMarginBegin">
                            <layoutData>
                            <l:GridData span="L11 M11 S12" />
                            </layoutData>
                        </Text>
                        </l:Grid>
                    <Label text="{i18n>actDate}" required="false"/>
                        <HBox class="sapUiTinyMarginBeginEnd">
                            <DatePicker id="actDateStartPromotion" value="{employeeDetail>/StartDate}" width="87%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            <Text text="-" class="sapUiTinyMarginEnd"/>
                            <DatePicker id="actDateEndPromotion" value="{employeeDetail>/EndDate}" width="87%" class="sapUiTinyMarginBeginEnd" editable="false"/>
                        </HBox>
                    <!-- <Label text="information" visible="false"/>
                    <VBox class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop" width="57%">
                    <MessageStrip
                        text="Yang bersangkutan sedang dalam proses pengajuan [ST/TP] yang diajukan padaa tanggal dd.mm.yyyy"
                        type="Warning"
                        showIcon="true"
                        showCloseButton="false"
                        class="sapUiMediumMarginBottom">
                    </MessageStrip>
                    </VBox> -->
                </f:content>
                </f:SimpleForm>
            </content>
        </Panel>
        <!-- action request panel -->
        <Panel 
            expandable="true" 
            expanded="true"
            headerText="Action Request" 
            width="auto">
            <content>
                <f:SimpleForm 
                    id="actionPromotionForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    emptySpanXL="1"
                    emptySpanL="1"
                    emptySpanM="1"
                    emptySpanS="1">
                    <f:content>
                        <Label text="{i18n>actionType}" />
                            <Input id="actionTypePromotion" value="{Promotion>employeeDetail>/ActionType}" editable="false">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text text="{Promotion>employeeDetail>/ActionTypeDesc}">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>reason}" required="true"/>
                            <Input 
                                id="reasonPromotion" 
                                value="{reason>/selectedReason/Key}" 
                                fieldGroupIds="grpValidation" 
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpReason" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text id="reasonTextPromotion" text="{reason>/selectedReason/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>effectiveDate}" required="true" />
                        <HBox class="sapUiSmallMarginBottom">
                            <DatePicker id="effectiveDateStartPromotion" value="" required="true" width="95%" change=".onEffectiveDateStartChange"/>
                            <Text text="-" class="sapUiSmallMarginBegin sapUiTinyMarginEnd"/>
                            <DatePicker id="effectiveDateEndPromotion" value="" width="95%" class="sapUiSmallMarginBegin" editable="false"/>
                        </HBox>
                            
                        <Label text="{i18n>mutation}" visible="false"/>
                            <Text text="Asal"/>
                            <Text text="Tujuan"/>
                        <Label text="{i18n>positionId}" />
                            <Input id="currentPositionIdPromotion" value="{Promotion>employeeDetail>/EmployeePositionId}" editable="false">
                            <layoutData>
                                <l:GridData span="L1 M1 S12" />
                            </layoutData>
                            </Input> 
                            <Text id="currentPositionTextPromotion" text="{Promotion>employeeDetail>/PositionName}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>                       
                            <Input 
                                id="newPositionIdPromotion" 
                                value="{position>/selectedPosition/Key}" 
                                fieldGroupIds="grpValidation" 
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpPosition" 
                                liveChange=".onPositionChange"
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newPositionTextPromotion" text="{position>/selectedPosition/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>employeeGroupId}" required="true" />
                            <Input id="currentEmployeeGroupIdPromotion" value="{Promotion>employeeDetail>/StatusAsal}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text text="{Promotion>employeeDetail>/EmployeeGrpDesc}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newEmployeeGroupIdPromotion" 
                                value="{
                                    parts: [
                                        {path: 'group>/selectedGroup/Key'},
                                        {path: 'position>/selectedPosition/Key6'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                fieldGroupIds="grpValidation"
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpGroup" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text 
                                id="newEmployeeGroupTextPromotion" 
                                text="{
                                    parts: [
                                        {path: 'group>/selectedGroup/Value'},
                                        {path: 'position>/selectedPosition/KeyDesc6'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>employeeSubgroupId}" required="true" />
                            <Input id="currentEmployeeSubgroupIdPromotion" value="{Promotion>employeeDetail>/JbtnAsl}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text text="{Promotion>employeeDetail>/EmployeeSubgrpDesc}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newEmployeeSubgroupIdPromotion" 
                                value="{
                                    parts: [
                                        {path: 'subGroup>/selectedSubGroup/Key2'},
                                        {path: 'position>/selectedPosition/Key7'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                fieldGroupIds="grpValidation" 
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpSubGroup" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text 
                                id="newEmployeeSubgroupTextPromotion" 
                                text="{
                                    parts: [
                                        {path: 'subGroup>/selectedSubGroup/Value'},
                                        {path: 'position>/selectedPosition/KeyDesc7'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>perAreaId}"/>
                            <Input id="currentPerAreaIdPromotion" value="{Promotion>employeeDetail>/PersonnelAreaId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentPerAreaTextPromotion" text="{Promotion>employeeDetail>/PersonnelAreaText}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newPerAreaIdPromotion" 
                                value="{
                                    parts: [
                                        {path: 'area>/selectedArea/Key'},
                                        {path: 'position>/selectedPosition/Key4'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                fieldGroupIds="grpValidation"  
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpArea" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text 
                                id="newPerAreaTextPromotion" 
                                text="{
                                    parts: [
                                        {path: 'area>/selectedArea/Value'},
                                        {path: 'position>/selectedPosition/KeyDesc4'}
                                        
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                wrapping="true" width="100%"> 
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>perSubAreaId}"/>
                            <Input id="currentPerSubAreaIdPromotion" value="{Promotion>employeeDetail>/PersonnelSubareaId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentPerSubAreaTextPromotion" text="{Promotion>employeeDetail>/PersonnelSubareaText}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input 
                                id="newPerSubAreaIdPromotion" 
                                value="{
                                    parts: [
                                        {path: 'subArea>/selectedSubArea/Key2'},
                                        {path: 'position>/selectedPosition/Key5'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                fieldGroupIds="grpValidation"
                                editable="true"
                                showValueHelp="true" 
                                valueHelpRequest=".handleValueHelpSubArea" 
                                required="true">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text 
                                id="newPerSubAreaTextPromotion" 
                                text="{
                                    parts: [
                                        {path: 'subArea>/selectedSubArea/Value'},
                                        {path: 'position>/selectedPosition/KeyDesc5'}
                                    ],
                                    formatter: '.formatter.fallbackValue'
                                }"
                                wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>unitOrgId}"/>
                            <Input id="currentUnitOrgIdPromotion" value="{Promotion>employeeDetail>/EmployeeOrgunitId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentUnitOrgTextPromotion" text="{Promotion>employeeDetail>/EmployeeOrgunitLongtext}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input id="newUnitOrgIdPromotion" value="{position>/selectedPosition/Key2}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newUnitOrgTextPromotion" text="{position>/selectedPosition/KeyDesc2}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>divisionId}"/>
                            <Input id="currentDivisionIdPromotion" value="{Promotion>employeeDetail>/DivisionId}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="currentDivisionTextPromotion" text="{Promotion>employeeDetail>/DivisionText}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                            <Input id="newDivisionIdPromotion" value="{position>/selectedPosition/Key3}" editable="false">
                                <layoutData>
                                    <l:GridData span="L1 M1 S12" />
                                </layoutData>
                            </Input>
                            <Text id="newDivisionTextPromotion" text="{position>/selectedPosition/KeyDesc3}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L3 M3 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>careerBand}"/>
                        <Input id="careerAsalPromotion" value="{employeeDetail>/CareerBandAsl}" editable="false">
                            <layoutData>
                                <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="careerAsalTextPromotion" text="" wrapping="true" width="100%">
                            <layoutData>
                                <l:GridData span="L3 M3 S12" />
                            </layoutData>
                        </Text>
                        <Input id="careerTujuanPromotion" value="{position>/selectedPositon/Key8}" editable="false">
                            <layoutData>
                                <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="careerTujuanTextPromotion" text="{position>/selectedPositon/KeyDesc8}" wrapping="true" width="100%">
                            <layoutData>
                                <l:GridData span="L3 M3 S12" />
                            </layoutData>
                        </Text>
                        <Label text="{i18n>careerLevel}"/>
                        <Input id="careerLvlAsalPromotion" value="" editable="false">
                            <layoutData>
                                <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="careerLvlAsalTextPromotion" text="" wrapping="true" width="100%">
                            <layoutData>
                                <l:GridData span="L3 M3 S12" />
                            </layoutData>
                        </Text>
                        <Input id="careerLvlTujuanPromotion" value="" editable="false">
                            <layoutData>
                                <l:GridData span="L1 M1 S12" />
                            </layoutData>
                        </Input>
                        <Text id="careerLvlTujuanTextPromotion" text="" wrapping="true" width="100%">
                            <layoutData>
                                <l:GridData span="L3 M3 S12" />
                            </layoutData>
                        </Text>
                        <Label text="{i18n>salaryAdj}" required="true"/>
                            <Select id="salaryAdjPromotion" required="true" fieldGroupIds="grpValidation"
                                items="{ path: 'dropdown>/salaryAdjColl', sorter: { path: 'text' }}"
                                forceSelection="false"
                                selectedKey="{dropdown>/selectedSalaryAdj}"
                                change=".onSalaryAdjChange">
                                <items>
                                    <core:Item key="{dropdown>key}" text="{dropdown>text}" />
                                </items>
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Select>
                        <Label text="{i18n>salaryAdjValue}"/>
                            <Input 
                                id="salaryAdjValuePromotion" 
                                enabled="{dropdown>/isSalaryAdjEnabled}"
                                value="{
                                path: 'create>/salaryAdj',
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {
                                    showMeasure: false,
                                    currencyCode: 'IDR',
                                    useSymbol: false,
                                    minFractionDigits: 0,
                                    maxFractionDigits: 0
                                    }
                                }"
                                placeholder="0">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text text="IDR">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                        <Label text="{i18n>as}" required="true"/>
                            <Select
                                id="asPromotion"
                                items="{dropdown>/asColl}"
                                fieldGroupIds="grpValidation"
                                selectedKey="{dropdown>/selectedAs}"
                                change=".onAsFieldChange">
                                <core:Item key="{dropdown>key}" text="{dropdown>text}" />
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Select>
                            <!-- <Select id="asMutation" required="true" fieldGroupIds="grpValidation"
                                items="{ path: 'dropdown>/asColl', sorter: { path: 'text' }}"
                                forceSelection="false"
                                selectedKey="{dropdown>/selectedAs}">
                                <items>
                                    <core:Item key="{dropdown>key}" text="{dropdown>text}" />
                                </items>
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Select> -->
                        <Label text="{i18n>employeeChange}"/>
                            <Input 
                                id="employeeChangePromotion" 
                                value="{employeechange>/selectedEmployeeChange/Key}" 
                                fieldGroupIds="grpValidation"
                                showValueHelp="true" 
                                liveChange=".onBlockInput"
                                valueHelpRequest=".handleValueHelpEmployeeChange"
                                enabled="{dropdown>/isEmployeeChangeEnabled}">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Input>
                            <Text id="employeeChangeTextPromotion" text="{employeechange>/selectedEmployeeChange/Value}" wrapping="true" width="100%">
                                <layoutData>
                                    <l:GridData span="L2 M2 S12" />
                                </layoutData>
                            </Text>
                            
                        <Label text="{i18n>basicCon}"/>
                            <TextArea 
                                id="basicConPromotion"
                                value="" 
                                rows="4"
                                showExceededText="true" 
                                maxLength="255" 
                                liveChange="handleLiveChange" 
                                valueLiveUpdate="true"
                                editable="true">
                                <layoutData>
