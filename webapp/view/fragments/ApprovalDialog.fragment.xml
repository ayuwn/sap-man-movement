<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
    <Dialog id="approvalDialog" title="Confirm" stretch="false" titleAlignment="Center">
        <VBox>
            <TextArea id="approvalNotes" rows="5" width="90%" height="auto" class="sapUiSmallMarginBegin sapUiSmallMarginEnd"/>
        </VBox>
        <buttons>
            <Button text="Submit" press="onSubmitApproval"/>
            <Button text="Cancel" press="onCancelApproval"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>