<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified">
    
    <Dialog id="dialog" class="sapUIResponsiveMargin">
        <customHeader>
             <Toolbar>
                <Title text="Employee" />
                <ToolbarSpacer />
            </Toolbar>
        </customHeader>
        <content>
            <f:SimpleForm id="form" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1" columnsL="1" columnsM="1">
                <f:content>
                   <HBox>
                   <Image src="{/icon}" width="80px" height="100px"/>
                   <VBox>
                   <Title text="{/title}"/>
                   <Text text="{/description}"/>
                   </VBox>
                   </HBox>
                   <HBox>
                   <Title text="Contact Detail"/>
                   </HBox>
                    <Label text="Employee Number" />   
                    <Text text="{/id}"/>
                    <Label text="Location" />
                    <Text text="{/location}" />
                    <Label text="Mobile" />
                    <Text text="{/phone}" />
                    <Label text="Email" />
                    <Text text="{/email}" />
                    <Label text="Team" />
                    <Text text="{/team}" />
                </f:content>
            </f:SimpleForm>
            </content>
            <endButton>
            <Button 
                text="Cancel"
                press="onDialogClose" />
            </endButton>
    </Dialog>
</core:FragmentDefinition>