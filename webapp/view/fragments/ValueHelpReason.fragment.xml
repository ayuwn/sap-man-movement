<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    stretch="false">
    <SelectDialog
        noDataText="No Reason Found"
        title="Select Reason"
        search="handleSearchReason"
        confirm="handleCloseReason"
        cancel="handleCloseReason"
        items="{reason>/}">
        <StandardListItem
            title="{reason>Key}"
            description="{reason>Value}"
            type="Active" />
    </SelectDialog>
</core:FragmentDefinition>