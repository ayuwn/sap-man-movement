<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified">
    
    <Dialog
        title="Upload Dokumen"
        class="sapUiResponsiveMargin"
        id="documentUploadDialog">

        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="4"
            labelSpanM="4"
            labelSpanS="12">
            
            <f:content>
                <Label text="Jenis Dokumen" />
                <Select
                    id="docTypeSelect"
                    required="true"
                    fieldGroupIds="grpValidation"
                    forceSelection="false"
                    items="{path: 'dropdown>/jenisDokumenColl', sorter: { path: 'text' }}">
                    <core:Item key="{dropdown>key}" text="{dropdown>text}" />
                </Select>
                
                <Label text="PIC" />
                <Select
                    id="picSelect"
                    required="true"
                    fieldGroupIds="grpValidation"
                    forceSelection="false"
                    items="{path: 'dropdown>/PICColl', sorter: { path: 'text' }}">
                    <core:Item key="{dropdown>key}" text="{dropdown>text}" />
                </Select>
                
                <Label text="Keterangan" required="true" />
                <Input id="keteranganInput" required="true" fieldGroupIds="grpValidation"/>

                <Label text="Upload Dokumen" required="true" fieldGroupIds="grpValidation"/>
                <u:FileUploader 
                    id="fileUploader"
                    name="myFileUpload"
                    uploadUrl="/upload"
                    tooltip="Upload your file"
                    placeholder="Pilih Dokumen"
                    fileType="pdf,doc,docx"
                    multiple="false"
                    change=".onFileChange">
                </u:FileUploader>
            </f:content>
        </f:SimpleForm>
        
        <beginButton>
            <Button 
                text="Add"
                type="Emphasized"
                press=".onDialogSubmit" />
        </beginButton>
        
        <endButton>
            <Button 
                text="Cancel"
                press=".onDialogClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
