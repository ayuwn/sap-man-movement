<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified">
    
    <Dialog class="sapUiResponsiveMargin">
        
        <!-- Custom Header with Title and Menu Button -->
        <customHeader>
            <Toolbar>
                <Title text="Upload Document" />
                <ToolbarSpacer />
            </Toolbar>
        </customHeader>

        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="4"
            labelSpanM="4"
            labelSpanS="12">
            
            <f:content>
                <Label text="Jenis Dokumen" />
                <Select
                    id="jenisDokumenSelect"
                    forceSelection="true"
                    items="{
                        path: '/JenisDokumenCollection',
                        sorter: { path: 'text' }
                    }">
                    <core:Item key="{key}" text="{text}" />
                </Select>
                
                <Label text="PIC" />
                <Select
                    id="picSelect"
                    forceSelection="true"
                    items="{
                        path: '/PICCollection',
                        sorter: { path: 'text' }
                    }">
                    <core:Item key="{key}" text="{text}" />
                </Select>
                
                <Label text="Keterangan" />
                <Input id="keteranganInput" />

                <Label text="Upload Document" />
                <u:FileUploader
                    id="fileUploader"
                    name="myFileUpload"
                    uploadUrl="upload/"
                    tooltip="Upload your file"
                    placeholder="Choose a file"
                    style="Emphasized"
                    fileType="pdf,doc,docx"
                    multiple="false"
                    change=".onFileChange">
                </u:FileUploader>
                <Text id="selectedFileName" text="" />
            </f:content>
        </f:SimpleForm>
        
        <beginButton>
            <Button 
                text="Submit"
                type="Emphasized"
                press=".onDialogSubmit" />
        </beginButton>
        
        <endButton>
            <Button 
                text="Cancel"
                press=".onDialogClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>