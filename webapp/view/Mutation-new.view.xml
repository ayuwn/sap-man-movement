<mvc:View
   controllerName="bsim.hcmapp.man.movement.controller.Mutation"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns="sap.m"
   xmlns:f="sap.ui.layout.form"
   xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core"
   xmlns:semantic="sap.m.semantic">
<semantic:FullscreenPage navButtonPress="onNavBack" showNavButton="true" title="{i18n>employeeStatusChange}">
    <semantic:content>
    <VBox class="sapUiSmallMargin">
        <!-- Employee Data Panel -->
        <Panel 
        expandable="true" 
        expanded="true"
        headerText="Employee Data" 
        width="auto" 
        class="sapUiResponsiveMargin">
            <content>
                <f:SimpleForm 
                id="employeeDetailForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                    <f:content>
                        <Label text="Nama"/>
                            <HBox>
                                <Input value="{employeeDetail>/EmployeeName}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd" editable="false"/>
                            </HBox>
                        <Label text="Position"/>
                            <HBox>
                                <Input value="{employeeDetail>/Position}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd"/>
                            </HBox>
                        <Label text="Phone"/>
                            <HBox>
                                <Input value="{employeeDetail>/Phone}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd"/>
                            </HBox>
                        <Label text="Email"/>
                            <HBox>
                                <Input value="{employeeDetail>/Email}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd"/>
                            </HBox>
                        <Label text="Location"/>
                            <HBox>
                                <Input value="{employeeDetail>/Location}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd"/>
                            </HBox>
                        <Label text="Team"/>
                            <HBox>
                                <Input value="{employeeDetail>/TotalTeam}" fieldWidth="auto" class="sapUiTinyMarginBeginEnd"/>
                            </HBox>
                    </f:content>
                </f:SimpleForm>
            </content>
        </Panel>
    </VBox>
</semantic:content>
</semantic:FullscreenPage>
</mvc:View>